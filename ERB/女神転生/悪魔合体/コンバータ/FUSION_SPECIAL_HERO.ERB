
;FUSION_SPECIAL_RESULTに処理を依存しています。

;コンバーターの有無確認
@FUSION_SPECIAL_4402,ARG,ARG:1
;まどマギコンバーターの有無確認
IF EQUIP:MASTER:Incubator
	;主人がグリーフシード装備時は魔女にコンバート
	IF EQUIP:MASTER:アクセサリ == 5498
		;Zoma×地母神 = ホムリリィ
		SIF ABL:(ARG:1):種族 == 1 
			RETURN 3392
		;Zoma×Kishin = ワルプルギスの夜
		SIF ABL:(ARG:1):種族 == 15
			RETURN 3396
		;Zoma×Yoma = キャンデロロ
		SIF ABL:(ARG:1):種族 == 5
			RETURN 3394
		;Zoma×Brute = オフィーリア
		SIF ABL:(ARG:1):種族 == 7
			RETURN 3393
		;Zoma×Snake = オクタヴィア
		SIF ABL:(ARG:1):種族 == 8
			RETURN 3399
		;Zoma×Beast = シャルロッテ
		SIF ABL:(ARG:1):種族 == 9
			RETURN 3398
		;Zoma×Foul = ゲルトルート
		SIF ABL:(ARG:1):種族 == 11
			RETURN 3395
	;装備してない場合は魔法少女にコンバート
	ELSE
		;Zoma×地母神/Kishin = 暁美ほむら
		IF ABL:(ARG:1):種族 == 1 || ABL:(ARG:1):種族 == 15
			;平均レベルが10未満ならメガネほむら、10以上ならノーマルほむら
			LOCAL:4 = (BASE:ARG:LV + BASE:(ARG:1):LV)/2
			IF LOCAL:4 >= 10
				RETURN 4398
			ELSE
				RETURN 4390
			ENDIF
		ELSE
			;Zoma×Megami/Deity = 鹿目まどか
			SIF ABL:(ARG:1):種族 == 2 || ABL:(ARG:1):種族 == 16
				RETURN 4399
			;Zoma×Tyrant = 美国織莉子
			SIF ABL:(ARG:1):種族 == 3
				RETURN 4393
			;Zoma×Yoma = 巴マミ
			SIF ABL:(ARG:1):種族 == 5
				RETURN 4397
			;Zoma×Fairy = 千歳ゆま
			SIF ABL:(ARG:1):種族 == 6
				RETURN 4394
			;Zoma×Brute = 佐倉杏子
			SIF ABL:(ARG:1):種族 == 7
				RETURN 4395
			;Zoma×Snake = 美樹さやか
			SIF ABL:(ARG:1):種族 == 8
				RETURN 4396
			;Zoma×Beast = 呉キリカ
			SIF ABL:(ARG:1):種族 == 9
				RETURN 4392
		ENDIF
	ENDIF
ELSEIF EQUIP:MASTER:Kaleidoscope
		;Zoma×Yoma = シオン
		SIF ABL:(ARG:1):種族 == 5
			RETURN 5050
		;Zoma×Rumor = 弓塚さつき
		SIF ABL:(ARG:1):種族 == 32
			RETURN 5051
		;Zoma×Kishin = 遠野　秋葉
		SIF ABL:(ARG:1):種族 == 1
			RETURN 5052
		;造魔×鬼神 = 軋間　紅摩
		SIF ABL:(ARG:1):種族 == 15
			RETURN 5066
		;Zoma×Tyrant = アルク
		SIF ABL:(ARG:1):種族 == 3
			RETURN 5053
		;Zoma×Divine = シエル
		SIF ABL:(ARG:1):種族 == 4
			RETURN 5054
		;Zoma×Element = 翡翠
		SIF ABL:(ARG:1):種族 == 13
			RETURN 5056
		;Zoma×Foul = 琥珀
		SIF ABL:(ARG:1):種族 == 11
			RETURN 5057
		;Zoma×魔人 = 遠野志貴
		SIF ABL:(ARG:1):種族 == 42
			RETURN 5055
		;Zoma×Deity = 蒼崎 青子
		SIF ABL:(ARG:1):種族 == 16
			RETURN 5063

ENDIF

