	ELSE
		CALLFORM SKILL_NAME_{ABL:ARG:@"初期変身悪魔スキル{LOCAL}"}, ARG
		;セット中のスキルは2にしておく
		D:(ABL:ARG:@"初期変身悪魔スキル{LOCAL}") = 2
	ENDIF
