PRINTFORMLC [110]Next system 
INPUT
LOCAL = RESULT
SELECTCASE LOCAL
	CASE 0
		;悪魔変身している場合、スキル同期を行う
		IF CFLAG:ARG:悪魔変身
			FOR LOCAL, 1, 9
				ABL:ARG:@"スキル{LOCAL}" = ABL:ARG:@"初期変身悪魔スキル{LOCAL}"
			NEXT
		ENDIF
		RETURN 0
	CASE 1 TO 8
		IF ABL:ARG:@"初期変身悪魔スキル{LOCAL}"
			DRAWLINE
			CALLFORM SKILL_NAME_{ABL:ARG:@"初期変身悪魔スキル{LOCAL}"}
			PRINTFORML %RESULTS%
			SIF FLAG:スキル属性表示設定 == 1
				CALL SKILL_EXPLAIN_PERFORMANCE, ABL:ARG:@"初期変身悪魔スキル{LOCAL}", ARG
			TRYCALLFORM SKILL_EXPLAIN_{ABL:ARG:@"初期変身悪魔スキル{LOCAL}"}
			DRAWLINE
			PRINTFORML Remove %RESULTS%?
			CALL INPUT_YN, "Yes", "No"
			IF RESULT == 0
				D:(ABL:ARG:@"初期変身悪魔スキル{LOCAL}") = 1
				ABL:ARG:@"初期変身悪魔スキル{LOCAL}" = 0
			ENDIF
		ENDIF
	CASE 106
		IF 選択系統 == 22
			選択系統 = 20
		ELSEIF 選択系統 == 0
			選択系統 = 22
		ELSE
			選択系統--
		ENDIF
	CASE 110
		IF 選択系統 == 22
			選択系統 = 0
		ELSEIF 選択系統 == 20
			選択系統 = 22
		ELSE
			選択系統++
		ENDIF
				
	CASE 1000 TO 5000
		LOCAL -= 1000
		IF D:LOCAL == 1
			DRAWLINE
			CALLFORM SKILL_NAME_{LOCAL}
			PRINTFORML %RESULTS%
			SIF FLAG:スキル属性表示設定 == 1
				CALL SKILL_EXPLAIN_PERFORMANCE, LOCAL, ARG
			TRYCALLFORM SKILL_EXPLAIN_{LOCAL}
			DRAWLINE
			PRINTFORML Install %RESULTS%?
			CALL INPUT_YN, "Yes", "No"
			IF RESULT == 0
				LOCAL:2 = 0
				FOR LOCAL:1, 1, FLAG:スキル数+1
					SIF ABL:ARG:@"初期変身悪魔スキル{LOCAL:1}"
						CONTINUE
					LOCAL:2 = 1
					ABL:ARG:@"初期変身悪魔スキル{LOCAL:1}" = LOCAL
					D:LOCAL = 2
					BREAK
				NEXT
				IF !LOCAL:2
					PRINTL Please select a skill to replace
					;入れ替えるスキルを選択してください
					FOR LOCAL:1, 1, FLAG:スキル数+1
						CALLFORM SKILL_NAME_{ABL:ARG:@"初期変身悪魔スキル{LOCAL:1}"}, ARG
						PRINTFORM 　[{LOCAL:1}]%RESULTS,20,LEFT%
						SIF LOCAL:1 % 4 == 0
							PRINTL 
					NEXT
					PRINTL 　[9] Cancel
					CALL INPUTINT(1, 2, 3, 4, 5, 6, 7, 8, 9)
					IF RANGE(RESULT, 1, 8)
						D:(ABL:ARG:@"初期変身悪魔スキル{RESULT}") = 1
						D:LOCAL = 2
						ABL:ARG:@"初期変身悪魔スキル{RESULT}" = LOCAL
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	CASE 10 TO 32
		選択系統 = RESULT - 10
ENDSELECT
GOTO START

