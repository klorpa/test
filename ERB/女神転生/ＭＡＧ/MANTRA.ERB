LOCAL:1 = 0
FOR LOCAL, 0, 4000
	SIF D:LOCAL == -1
		CONTINUE
	TRYCCALLFORM SKILL_SUCCESSION_TYPE_{LOCAL}
	CATCH
		CONTINUE
	ENDCATCH
	SIF RESULT != 選択系統
		CONTINUE
