			SETCOLOR COLOR("gray")
		PRINTFORM [{S:LOCAL+1000}] %RESULTS,20,LEFT%
		RESETCOLOR
	ENDIF
	SIF LOCAL % 3 == 2
		PRINTL
NEXT
