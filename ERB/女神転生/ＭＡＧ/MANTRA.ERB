;スキル登録(マントラ)
FOR LOCAL, 1, 116
	SIF CDFLAG:ARG:マントラ:LOCAL < 10000
		CONTINUE
	CALL GET_MANTRA_ABILITY, LOCAL
	FOR LOCAL:1, 3, 11
		SIF RESULT:(LOCAL:1) < 0 
			CONTINUE
		D:(RESULT:(LOCAL:1)) = 1
		CALLFORM SKILL_SUCCESSION_TYPE_{RESULT:(LOCAL:1)}
		X:RESULT = 1
	NEXT
NEXT
;スキル登録(習得スキル)
FOR LOCAL, 1, 21
	SIF ABL:ARG:@"初期変身悪魔習得スキル{LOCAL}" <= 0
		CONTINUE
	SIF ABL:ARG:@"初期変身悪魔習得LV{LOCAL}" > 0
		CONTINUE
	D:(ABL:ARG:@"初期変身悪魔習得スキル{LOCAL}") = 1
	CALLFORM SKILL_SUCCESSION_TYPE_{ABL:ARG:@"初期変身悪魔習得スキル{LOCAL}"}
	X:RESULT = 1
NEXT
