;----------------------------------------------------------
;@COLOR(ARGS)
;----------------------------------------------------------
@COLOR, ARGS
#FUNCTION
SELECTCASE TOUPPER(ARGS)
	CASE "DEFAULT" , "DEF" , "デフォルト"
		RETURNF GETDEFCOLOR()
	CASE "RED", "赤"
		RETURNF 0x990000
	CASE "P-RED", "PASTEL-RED", "パ赤"
		RETURNF 0xC07070
	CASE "P-BLUE", "PASTEL-BLUE", "パ青"
		RETURNF 0x7070C0
	CASE "P-GREEN", "PASTEL-GREEN", "パ緑"
		RETURNF 0x70C070
	CASE "P-PURPLE", "PASTEL-PURPLE", "パ紫"
		RETURNF 0xC070C0
	CASE "P-YELLOW", "PASTEL-YELLOW", "パ黄"
		RETURNF 0x505020
	CASE "P-BGREEN", "P-BLUEGREEN", "PASTEL-BLUEGREEN", "パ青緑"
		RETURNF 0x205050
	CASE "WHITE", "白"
		RETURNF 0xC0C0C0
	CASE "BLACK", "黒"
		RETURNF 0x000000
	CASE "AQUA", "水色"
		RETURNF 0x66FFFF
	CASE "GRAY", "灰色"
		RETURNF 0x404040
	CASE "LIGHT-GRAY", "明灰色"
		RETURNF 0x777777
	CASE "PINK", "桃"
		RETURNF 0xFF33FF
	CASE "Dark-PINK", "黒桃"
		RETURNF 0x990099
ENDSELECT