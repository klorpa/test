;------------------------------
;ARGSをARGの文字幅にあわせて
;ARGS:1 LEFT 左揃え、CENTER 中央揃え, RIGTT 右揃えになるように半角スペースを加えて返す
;------------------------------
@TOALIGNMENT, ARGS, ARG, ARGS:1
#FUNCTIONS
SELECTCASE ARGS:1
	CASE "LEFT"
		RETURNF @"%ARGS,ARG,LEFT%"
	CASE "CENTER"
		RETURNF " " * MAX((ARG - STRLENS(ARGS))/2,0) + ARGS + " " * MAX((ARG - STRLENS(ARGS)+1)/2,0)
	CASE "RIGHT"
		RETURNF @"%ARGS,ARG,RIGHT%"
ENDSELECT
