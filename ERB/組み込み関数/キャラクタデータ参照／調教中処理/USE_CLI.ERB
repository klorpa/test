;-------------------------------------------------
;クリ使用判定基本
;-------------------------------------------------
@USE_CLI,ARG,ARG:1 = 0
#FUNCTION
;クリが無いとダメ
SIF !HAVE_CLITORIS(ARG)
	RETURNF 0

;下半身下着をつけている、スカート以外の下半身上着を履いている、下の空いてない全身上着を着ているとダメ
SIF TEQUIP:ARG:陰唇露出 != -1 && ((ARG:1 & 1 && (TEQUIP:ARG:Ｃ触覚 & 2)) || (ARG:1 & 2 && (TEQUIP:ARG:Ｃ触覚 & 4)) ) == 0
	RETURNF 0

;三角木馬騎乗中はダメ
SIF TEQUIP:ARG:41
	RETURNF 0
;クリキャップ使用中はダメ
SIF TEQUIP:ARG:11
	RETURNF 0

RETURNF 1