;-------------------------------------------------
;ペニス使用判定基本
;-------------------------------------------------
@USE_PENIS,ARG,ARG:1 = 0
#FUNCTION
;オトコかふたなりじゃないとダメ
SIF !HAVE_PENIS(ARG)
	RETURNF 0

;下半身下着をつけている、スカート以外の下半身上着を履いている、下の空いてない全身上着を着ているとダメ
SIF TEQUIP:ARG:陰唇露出 != -1 && ((ARG:1 & 1 && (TEQUIP:ARG:Ｃ触覚 & 2)) || (ARG:1 & 2 && (TEQUIP:ARG:Ｃ触覚 & 4)) ) == 0
	RETURNF 0

;オナホール使用中はダメ
SIF ITEM_PENIS(ARG) > 0
	RETURNF 0
RETURNF 1