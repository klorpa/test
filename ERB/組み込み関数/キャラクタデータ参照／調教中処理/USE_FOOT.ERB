@USE_FOOT,ARG
#FUNCTION
SIF !IS_HUMAN(ARG) && !TALENT:ARG:足 && !TALENT:ARG:鉤足 
	RETURNF 0

;鉤足の調教者の場合は技巧Lv2以上必要
SIF TALENT:ARG:鉤足 && ABL:ARG:2 < 2 && ARG == PLAYER
	RETURNF 0

SIF ITEM_FOOT(ARG) > 0
	RETURNF 0

RETURNF 1