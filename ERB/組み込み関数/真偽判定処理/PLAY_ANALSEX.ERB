;-------------------------------------------------
;アナルSEX判定基本
;-------------------------------------------------
@PLAY_ANALSEX,ARG,ARG:1
#FUNCTION
;小人体型持ちは、双方が調教者と調教対象ならOK
;それ以外の場合は主人が禁断の知識持ちじゃないとダメ
SIF TALENT:(ARG:1):142 && ( ( TALENT:ARG:144 == 0 || ARG != MASTER ) && (TALENT:ARG:142 == 0 && EXP:(ARG:1):Ａ拡張経験 < 10))
	RETURNF 0

;潤滑不足で、従順3以下・レズっ気3以下のASSIの場合はできない（サドならＯＫ）
IF PALAM:(ARG:1):4 < PALAMLV:2 && ARG == ASSI && !IS_MALE(ARG)
	SIF (ABL:ARG:0 <= 3 || ABL:ARG:11 <= 3) && TALENT:ARG:83 == 0
		RETURNF 0
ENDIF

SIF !USE_ANUS(ARG:1) || ( !USE_PENIS(ARG) && !USE_PBAND(ARG) )
	RETURNF 0

RETURNF 1