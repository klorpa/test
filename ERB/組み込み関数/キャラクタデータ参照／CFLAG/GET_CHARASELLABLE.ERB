;-----------------------------
;売却可能かを取る関数
;ARG キャラ番号
;-----------------------------
@GET_CHARASELLABLE(ARG)
#FUNCTION
SIF ARG == MASTER
	RETURNF 0
SIF CFLAG:ARG:ボスフラグ
	RETURNF 0
SIF CFLAG:ARG:この場に居ないフラグ == 1
	RETURNF 0
;育児部屋に移動しているキャラは除外
SIF CHECK_CHILD_CARE(ARG) && FLAG:出産機能ONOFF == 1
	RETURNF 0
SIF CFLAG:ARG:労役フラグ == 3
	RETURNF 0
SIF CFLAG:ARG:売却可能 == 0
	RETURNF 0
SIF CFLAG:ARG:売却不可フラグ
	RETURNF 0
RETURNF 1
