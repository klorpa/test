;========================================
;相性判定関数
;TARGETのグループARGSにおけるARG:1（PLAYER）→ARG（TARGET）に対する相性を返す
;
;========================================
@GET_RELATION_GROUP(ARG = -1, ARG:1 = -1 , ARGS)
#FUNCTION
SIF ARG == -1
	ARG = TARGET
SIF ARG:1 == -1
	ARG:1 =PLAYER
SELECTCASE ARGS
	CASE "高天原"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "イザナミ"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "イザナギ"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "アマテラス"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "スサノオ"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "高天原")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "豊葦原")
			RETURNF 75
	CASE "豊葦原"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "イザナミ"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "イザナギ"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "スサノオ"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "アマテラス"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "豊葦原")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "高天原")
			RETURNF 75
	CASE "ヘブライ天使"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "YHVH"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "ルシファー"
			RETURNF 50
		IF IS_RELATION_GROUP(ARG:1, "ヘブライ天使")
			;天使は自分より上から抜群、下から良好
			IF CSVBASE(NO:ARG, GETNUM(BASE, "LV"), 0) < CSVBASE(NO:(ARG:1), GETNUM(BASE, "LV"), 0)
				RETURNF 150
			ELSE
				RETURNF 125
			ENDIF
		ENDIF
		SIF IS_RELATION_GROUP(ARG:1, "ソロモン72柱")
			RETURNF 75
	CASE "ソロモン72柱"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "YHVH"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "ソロモン72柱")
			RETURNF 75
		SIF IS_RELATION_GROUP(ARG:1, "ヘブライ天使")
			RETURNF 75
		
	CASE "アムシャ・スプンタ"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "アフラ・マズダー"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "ズルワーン"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "アムシャ・スプンタ")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "ゾロアスター悪神")
			RETURNF 75
	CASE "ゾロアスター悪神"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "ズルワーン"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "アフラ・マズダー"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "ゾロアスター悪神")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "アムシャ・スプンタ")
			RETURNF 75
	CASE "アスガルド"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "オーディン"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "ロキ"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "アスガルド")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "ラグナロク")
			RETURNF 75
	CASE "ラグナロク"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "ロキ"
			RETURNF 200
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "オーディン"
			RETURNF 50
		SIF IS_RELATION_GROUP(ARG:1, "ラグナロク")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "アスガルド")
			RETURNF 75
		
	CASE "猫"
		SIF IS_RELATION_GROUP(ARG:1, "猫")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "犬")
			RETURNF 75
	CASE "犬"
		IF IS_RELATION_GROUP(ARG:1, "犬")
			;天使は自分より上から抜群、下から良好
			IF CSVBASE(NO:ARG, GETNUM(BASE, "LV"), 0) < CSVBASE(NO:(ARG:1), GETNUM(BASE, "LV"), 0)
				RETURNF 150
			ELSE
				RETURNF 125
			ENDIF
		ENDIF
		SIF IS_RELATION_GROUP(ARG:1, "猿")
			RETURNF 75
	CASE "猿"
		SIF IS_RELATION_GROUP(ARG:1, "猿")
			RETURNF 150
		SIF IS_RELATION_GROUP(ARG:1, "犬")
			RETURNF 75
	;エリンはマイナスがなくて数も多いのでとりあえず125に
	CASE "エリン"
		SIF IS_RELATION_GROUP(ARG:1, "エリン")
			RETURNF 125
	CASE "ジャック一家"
		SIF IS_RELATION_GROUP(ARG:1, "ジャックシリーズ")
			RETURNF 150
	CASE "Vampire"
		SIF CSVCALLNAME(NO:(ARG:1), 0) == "クルースニク"
			RETURNF 75
		
ENDSELECT
