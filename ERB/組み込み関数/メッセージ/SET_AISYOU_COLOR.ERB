;相性に合わせた色変更
;【急募】カラーコーディネイトのセンス
@SET_AISYOU_COLOR, ARG
SELECTCASE ARG
	CASE 999
		;反射
		LOCAL = GETNUM(FLAG, "反射カラー")
	CASE IS > 100
		;弱点
		LOCAL = GETNUM(FLAG, "弱点カラー")
	CASE 100
		;普通
		LOCAL = GETNUM(FLAG, "通常カラー")
	CASE IS > 0
		;耐性
		LOCAL = GETNUM(FLAG, "耐性カラー")
	CASE 0
		;無効
		LOCAL = GETNUM(FLAG, "無効カラー")
	CASEELSE
		;吸収
		LOCAL = GETNUM(FLAG, "吸収カラー")
ENDSELECT
CALL GETCOLOR_9(FLAG:LOCAL)
SETCOLOR RESULT, RESULT:1, RESULT:2
RETURN ARG