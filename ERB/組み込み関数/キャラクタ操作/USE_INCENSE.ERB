;=========================================
;香を使う
;=========================================
@BASE_INCENSE,ARG
#LOCALSSIZE 2
#DIMS 選択肢リスト,1
$INPUT_LOOP
選択肢リスト = 
FOR LOCAL,1,FLAG:基本能力数
	LOCALS = %GET_BASESTATUS(LOCAL)%
	LOCALS:1 = %LOCALS,4,LEFT% {BASE:ARG:LOCALS,3}({MAXBASE:ARG:LOCALS,3})
	LOCALS:1 = %LOCALS:1%　　　%ITEMNAME_E(LOCAL+1009),8,LEFT% 残り{ITEM:(LOCAL+1009),2}個
	選択肢リスト = %選択肢リスト%%LOCALS:1%
	SIF LOCAL != FLAG:基本能力数-1
		選択肢リスト = %選択肢リスト%_
NEXT
CALL INPUT_SPLIT("手持ちの香を"+CALLNAME:ARG+"に使います",選択肢リスト,"_","終了")
SIF RESULT == 0
	RETURN
LOCALS = %GET_BASESTATUS(RESULT)%
LOCALS:1 = %GET_BASESTATUS_E(RESULT)%
LOCAL  = RESULT+1009
SIF ITEM:LOCAL == 0
	GOTO INPUT_LOOP
BASE:ARG:LOCALS ++
ITEM:LOCAL --
PRINTFORMW TARGET:[{CPOS(ARG),2}] %CALLNAME:ARG,20,LEFT%　>>>>>>　%LOCALS:1%＋１
CALL SYNC_STATUS,ARG
GOTO INPUT_LOOP