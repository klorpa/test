				ELSEIF RESULT == 50
					PRINTFORM [%GET_TYPE_E(LOCAL:3),4%:半減]　
				ELSEIF RESULT == 0
					PRINTFORM [%GET_TYPE_E(LOCAL:3),4%:無効]　
				ELSE
					PRINTFORM [%GET_TYPE_E(LOCAL:3),4%:{RESULT,4}]　
				ENDIF
				SIF LOCAL:4 % 7 == 6
					PRINTL 
				LOCAL:4 += 1
			ENDIF
			RESETCOLOR
		NEXT
		SIF LOCAL:4 % 7 > 0
			PRINTL 
	NEXT
