		ENDIF
		PRINTL 
		PRINTFORMLC %ITEMNAME_E(LOCAL)%　[%LOCALS,4%]
		PRINTL 
		LOCAL:4 = 0
		FOR LOCAL:3, 0, 19
			TRYCALLFORM 防御相性_{LOCAL}, LOCAL:3
			IF RESULT != 100
