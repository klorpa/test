@BATTLE_BOYCOTT_MESSAGE_PUB308,ARG,ARG:1 = 0
	;ボイコットした場合に表示する口上
	CALLFORM SKILL_NAME_{CFLAG:ARG:入力行動},ARG
	;使用したスキルの名前をLOCALSに代入
	LOCALS = %RESULTS%
	SETCOLOR COLOR("RED")
	SELECTCASE ARG:1
		;物理ダメージを与える行動で、獰猛持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"獰猛")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "はイヤでありんす",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;魔法ダメージを与える行動で、狡猾持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"狡猾")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "はちょっと…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;高威力の行動で、残虐持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"残虐")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%CSTR:二人称 + "はズイブンとヤサシイでありんすな…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;相手の弱点を付いた攻撃or行動不能な状態異常の敵に対する攻撃で、賢い持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"賢い")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "など、今する事ではないでありんしょう",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;破魔相性の行動で、天使持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"天使")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "の指示は聞けないでありんす",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;呪殺相性の行動で、堕天使持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"堕天使")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "では" + CSTR:一人称 + "のココロが収まりんせん！",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;回復・状態回復行動では友愛持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"友愛")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"愛がないのはイヤでありんす…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;状態変化では高慢持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"高慢")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"え〜、" + LOCALS + "でありんすか〜…",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;特殊では冷静持ちの忠誠度が上昇
		CASE GETNUM(TALENT,"冷静")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%"この局面で" + LOCALS + "は無いでありんしょう",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;愚鈍持ちは主人とのLv差だけ忠誠度が上昇
		CASE GETNUM(TALENT,"愚鈍")
			PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
			PRINTFORML ┃%LOCALS + "の気分ではありんせん",72,LEFT%┃
			PRINTFORMW ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
		;虚心持ちは最低２だけ忠誠度が上昇
		;CASE GETNUM(TALENT,"虚心")
		;	PRINTFORML ┏>MESSAGE━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
