@BATTLE_EVENT_K4106, ARG, ARG:1, ARG:2
SIF ARG < 0 && NO:ARG != 4518
	RETURN 0
LOCAL:1 = 1
LOCALS = EMPTY
SELECTCASE TFLAG:戦闘イベント
	;COOP発動 ARGは発動者
	CASE 1
		IF RAND:3 == 0
			LOCALS = さて、一気に片付けるかのう
		ELSEIF !RAND:2
			LOCALS = 機はここじゃ、此処で行く
		ELSE
			LOCALS = 隙を見せたな…！
		ENDIF
	CASE 2
		IF RAND:3 == 0
			LOCALS = 重ねあわせよう、逃れると思うな
		ELSEIF !RAND:2
			LOCALS = ここじゃな…！
		ELSE
			LOCALS = さぁ、行くぞ…！
		ENDIF
	;攻撃　ARGが攻撃をする仲魔、ARG:1が敵、ARG:2がダメージ量
	CASE 11
		CALLFORM SKILL_TYPE_{CFLAG:ARG:入力行動}
		LOCAL = MAXBASE:(ARG:1):GET_TYPE(RESULT)
		;相手が死んだ
		IF BASE:(ARG:1):ＨＰ <= 0
			IF 陥落(ARG) && RAND:2
				LOCALS = さらばじゃ、邪魔者
			ELSE
				IF RAND:2
					LOCALS = さぁ、これが死という極上の快楽じゃ
				ELSE
					LOCALS = 大淫婦の腕に抱かれて昇天するがいい
				ENDIF
			ENDIF
		;弱点をついた。つまりCOOP
		ELSEIF LOCAL > 100 && LOCAL < 999
			IF CFLAG:(ARG:1):防御フラグ
				LOCALS = 硬いのう…
			ELSE
				;こっちはCOOP発動に回すためにカット
				RETURN 0
			ENDIF
		;大ダメージ
		ELSEIF ダメージ割合(ARG:1, ARG:2) > 50
			IF RAND:2
				LOCALS = さぁあとどれだけ耐えられるかのう…
			ELSE
				LOCALS = さぁ、もう逝ってしまえ、逝って楽になるがいい
			ENDIF
		ELSEIF ダメージ割合(ARG:1, ARG:2) > 20
			IF RAND:2
				LOCALS = ほら、ほらまだまだ続けるぞ
			ELSE
				LOCALS = まだまだ狂宴は始まったばかりじゃ
			ENDIF
		ELSEIF ダメージ割合(ARG:1, ARG:2) > 0
			IF RAND:2
				LOCALS = さぁまだまだ終わらぬぞ
			ELSE
				LOCALS = 心地よくしてやろう…そんなに硬くなるな
			ENDIF
		;無効化された
		ELSEIF ARG:2 == 0
			IF 陥落(ARG) && RAND:2
				LOCALS = …利かぬか
			ELSE
				LOCALS = 魔人の一撃を意にも介さんか…
			ENDIF
		;吸収された
		ELSEIF ARG:2 < 0
			IF RAND:2
				LOCALS = ほう…吸収するか
			ELSE
				LOCALS = むぅ…吸い取るか…
			ENDIF
		ENDIF
	;被ダメージ
	;ARGが攻撃を受ける仲魔、ARG:1が敵、ARG:2がダメージ量
	CASE 12
		;死んだ
		IF BASE:ARG:ＨＰ <= 0
			IF 陥落(ARG) && RAND:2
				LOCALS = 許せ…
			ELSE
				IF RAND:2
					LOCALS = な…に…？
				ELSE
					LOCALS = ホッホッホ…よく、やる…のう…
				ENDIF
			ENDIF
		;大ダメージ
		ELSEIF ダメージ割合(ARG, ARG:2) > 50 || 現HP割合(ARG) < 25
			IF 陥落(ARG) && RAND:2
				LOCALS = この程度で魔人を殺しきれると思い上がるでないぞ…！
			ELSE
				IF RAND:2
					LOCALS = …思ったよりもやるのう
				ELSE
					LOCALS = 存外やるのう…さぁ、もっと楽しませておくれ…！
				ENDIF
			ENDIF
		ELSEIF ダメージ割合(ARG, ARG:2) > 20
			IF RAND:2
				LOCALS = 仔細なし。余裕じゃ
			ELSE
				LOCALS = …大したものでもないのう
			ENDIF
		ELSEIF ダメージ割合(ARG, ARG:2) > 0
			IF RAND:2
				LOCALS = 蚊ほども利かぬな。舐めているのかえ？
			ELSE
				LOCALS = …この程度かえ？
			ENDIF
		;無効
		ELSEIF ARG:2 == 0
			IF RAND:2
				LOCALS = 今何かしたかの…？
			ELSE
				LOCALS = 魔人を舐めるなよ、つまらぬ事で時間を使わせるな
			ENDIF
		;吸収
		ELSEIF ARG:2 < 0
			IF RAND:2
				LOCALS = ホッホッホ…心地よいぞ
			ELSE
				LOCALS = これはとんだ贈り物だ…ありがたく頂くことにしよう
			ENDIF
		ENDIF
	CASE 15
		;被反射
		PRINTFORMW ARG:2 = {ARG:2}
		IF RAND:2
			LOCALS = …弾くか
		ELSE
			LOCALS = ふむ、これを弾くか
		ENDIF
	CASE 16
		;反射
		IF RAND:2
			LOCALS = ほれ、返してやろう
		ELSE
			LOCALS = 相手を見定めて放つことだ。さもなければ…ほら、こうなる。
		ENDIF
	CASE 17
		;敵回避
		IF RAND:2
			LOCALS = 避けたか…
		ELSE
			LOCALS = 避けたな…つれないのう
		ENDIF
	CASE 18
		;自分回避
		IF RAND:2
			LOCALS = なんじゃ今のは
		ELSE
			LOCALS = 今何かしたかのう？
		ENDIF
ENDSELECT
SIF LOCALS != "EMPTY"
	CALL MESSAGE_B(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)
