@BATTLE_EVENT_K1014_1, ARG, ARG:1, ARG:2
SIF ARG < 0 && NO:ARG != 4518
	RETURN 0
LOCAL:1 = 1
LOCALS = EMPTY
SELECTCASE TFLAG:戦闘イベント
	;COOP発動 ARGは発動者
	CASE 1
		IF RAND:3 == 0
			LOCALS = 《チョメチョメターイム！》
		ELSEIF !RAND:2
			LOCALS = 《オレサマ オマエ マルカジリ！》
		ELSE
			LOCALS = 《確保ォーーー！》
		ENDIF
	CASE 2
	;攻撃　ARGが攻撃をする仲魔、ARG:1が敵、ARG:2がダメージ量
	CASE 11
		CALLFORM SKILL_TYPE_{CFLAG:ARG:入力行動}
		LOCAL = MAXBASE:(ARG:1):GET_TYPE(RESULT)
		;相手が死んだ
		IF BASE:(ARG:1):ＨＰ <= 0
			IF 陥落(ARG) && RAND:2
				LOCALS = 仇なすダニがまた１匹減りましたわ
			ELSE
				IF RAND:2
					LOCALS = 《準備運動にもなりゃしねぇ》
				ELSE
					LOCALS = 《排除完了です》
				ENDIF
			ENDIF
		;弱点をついた。つまりCOOP
		ELSEIF LOCAL > 100 && LOCAL < 999
			IF CFLAG:(ARG:1):防御フラグ
				LOCALS = 《しぶといクマ…》
			ELSE
				;こっちはCOOP発動に回すためにカット
				RETURN 0
			ENDIF
		;大ダメージ
		ELSEIF ダメージ割合(ARG:1, ARG:2) > 50
			IF RAND:2
				LOCALS = 《You scared?》
			ELSE
				LOCALS = 《Jack Pot！》
			ENDIF
		ELSEIF ダメージ割合(ARG:1, ARG:2) > 20
			IF RAND:2
				LOCALS = 《貴様たちが勝てる、科学的根拠は何もないのだ！》
			ELSE
				LOCALS = 《今や、限界を超えたプラズマパワーが！貴様を倒す！！》
			ENDIF
		ELSEIF ダメージ割合(ARG:1, ARG:2) > 0
			IF RAND:2
				LOCALS = 《頑丈な野郎だ…》
			ELSE
				LOCALS = 《仕方ねえ…》
			ENDIF
		ELSEIF ARG:2 == 0
			IF 陥落(ARG) && RAND:2
				LOCALS = マスター、敵は装甲に優れております！
			ELSE
				LOCALS = 《ジーザス！》
			ENDIF
		ELSEIF ARG:2 < 0
			IF 陥落(ARG) && RAND:2
				LOCALS = マスター、しくじりましたわ。
			ELSE
				LOCALS =《Damn！》
			ENDIF
		ENDIF
	;被ダメージ
	;ARGが攻撃を受ける仲魔、ARG:1が敵、ARG:2がダメージ量
	CASE 12
		;死んだ
		IF BASE:ARG:ＨＰ <= 0
			IF 陥落(ARG) && RAND:2
				LOCALS = %CSTR:ARG:二人称%…私は…ごめんなさい
			ELSE
				IF RAND:2
					LOCALS = （バチッ）《殉職…にはならない…か…》…（バチッ）
				ELSE
					LOCALS = 《「侮る葛に倒さる」、か》…（バチッ）
				ENDIF
			ENDIF
		;大ダメージ
		ELSEIF ダメージ割合(ARG, ARG:2) > 50 || 現HP割合(ARG) < 25
			IF 陥落(ARG) && RAND:2
				LOCALS = %CSTR:ARG:二人称%、このままでは砕かれます…
			ELSE
				IF RAND:2
					LOCALS = （バチッ）《神に捧げられし…そうか…僕はいけにぇ》
				ELSE
					LOCALS = 《これは夢だったのか…悪い夢…いや、い（バチッ）》
				ENDIF
			ENDIF
		ELSEIF ダメージ割合(ARG, ARG:2) > 20
			IF RAND:2
				LOCALS = 《負けないクマ！》リアバンパーにヒビが入りましたわ…
			ELSE
				LOCALS = 《いたた…ひどいクマ》フロントカウルがへこんでしまいましたわ…
			ENDIF
		ELSEIF ダメージ割合(ARG, ARG:2) > 0
			IF RAND:2
				LOCALS = フロントガラスも砕けませんわ
			ELSE
				LOCALS = 塗装が！　私の美しいボンネットが！？
			ENDIF
		;無効
		ELSEIF ARG:2 == 0
			IF RAND:2
				LOCALS = 《チャ〜オ！》このボディには傷一つ付きませんよ
			ELSE
				LOCALS = 《Come here！》それが攻撃とでも言うのかしら？
			ENDIF
		;吸収
		ELSEIF ARG:2 < 0
			IF RAND:2
				LOCALS = 《アンコールだクマ！》心地よい悪あがきでしたわ
			ELSE
				LOCALS = 《サンキューだクマ！》お代は鉛弾でよろしいかしら？
			ENDIF
		ENDIF
	CASE 15
		PRINTFORMW ARG:2 = {ARG:2}
		IF RAND:2
			LOCALS = 《クマッ！》跳ね返されたとでも！？
		ELSE
			LOCALS = 《クマッ！》自分の攻撃で…何たる屈辱！
		ENDIF
	CASE 16
		IF RAND:2
			LOCALS = 《ザマァみやがれ！》自分の攻撃のお味はいかが？
		ELSE
			LOCALS = 《先輩､さすがッス！》反射なんて大恥、私にはかけませんわ
		ENDIF
	CASE 17
		IF RAND:2
			LOCALS = 《アイツ、速い！》
		ELSE
			LOCALS = 避けられた！？　この《”放送禁止用語につき検閲削除”》めが！
		ENDIF
	CASE 18
		IF RAND:2
			LOCALS = 《殺すつもりで、お出で下さいませ。》
		ELSE
			LOCALS = 《回避でございます》
		ENDIF
ENDSELECT
SIF LOCALS != "EMPTY"
	CALL MESSAGE_B(LOCAL:1, LOCALS, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)
