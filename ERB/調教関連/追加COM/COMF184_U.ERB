	SOURCE:11 += 180
ELSEIF ABL:9 == 5
	TIMES SOURCE:13 , 1.70
	SOURCE:10 += 150
	SOURCE:11 += 250
ELSEIF ABL:9 == 6
	TIMES SOURCE:13 , 1.90
	SOURCE:10 += 200
	SOURCE:11 += 300
ELSEIF ABL:9 == 7
	TIMES SOURCE:13 , 2.10
	SOURCE:10 += 250
	SOURCE:11 += 350
ELSEIF ABL:9 == 8
	TIMES SOURCE:13 , 2.30
	SOURCE:10 += 300
	SOURCE:11 += 400
ELSEIF ABL:9 == 9
	TIMES SOURCE:13 , 2.50
	SOURCE:10 += 350
	SOURCE:11 += 450
ELSEIF ABL:9 >= 10
	TIMES SOURCE:13 , 3.00
	SOURCE:10 += 500
	SOURCE:11 += 500
ENDIF

;依存度ベクトル
TFLAG:33 = 3


RETURN 1


