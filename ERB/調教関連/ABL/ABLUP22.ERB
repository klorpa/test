	IF EXP:50 == 0
		;AbnormalEXPが不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ３から４に上げるときはAbnormalEXP3以上必要（素質：[中毒しやすい]なら無視できる）
ELSEIF ABL:22 == 3 && TALENT:72 == 0
	IF EXP:50 < 3
		;AbnormalEXPが不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ４から５に上げるときはAbnormalEXP5以上必要（素質：[中毒しやすい]なら無視できる）
ELSEIF ABL:22 == 4 && TALENT:72 == 0
	IF EXP:50 < 5
		;AbnormalEXPが不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ８から９に上げるときはAbnormalEXP7以上必要（素質：[中毒しやすい]なら無視できる）
ELSEIF ABL:22 == 8 && TALENT:72 == 0
	IF EXP:50 < 7
		;AbnormalEXPが不足
		I |= 2
		J |= 2
	ENDIF
