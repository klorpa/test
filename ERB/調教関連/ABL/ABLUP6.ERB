;能力アップ可能なら1にする
Z = 0

IF ABL:6 == 0
	A = 1
ELSEIF ABL:6 == 1
	A = 20
ELSEIF ABL:6 == 2
	A = 400
ELSEIF ABL:6 == 3
	A = 5000
ELSEIF ABL:6 == 4
	A = 15000
ELSEIF ABL:6 == 5
	A = 30000
ELSEIF ABL:6 == 6
	A = 40000
ELSEIF ABL:6 == 7
	A = 50000
ELSEIF ABL:6 == 8
	A = 60000
ELSEIF ABL:6 == 9
	A = 70000
ENDIF

;淫乱
SIF TALENT:4
	TIMES A , 0.80
;娼婦
