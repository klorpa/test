@ISABLUP0
;恋慕、親愛、服従、隷属はMAXLV10
IF ABL:0 >= 10
	RETURN 0
ELSEIF ABL:0 >= 5 && !陥落(TARGET) && TARGET != MASTER
	RETURN 0
