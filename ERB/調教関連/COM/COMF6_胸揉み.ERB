;-------------------------------------------------
;胸揉み
;愛撫系コマンド、レベル1
;-------------------------------------------------
@JUMP_COM6
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
;母乳体質の場合搾乳に飛ぶ
SIF TALENT:母乳体質
	RETURN 509
RETURN -1
@ACT_COM6


PRINTL Breast Massage
TSTR:0 = 胸揉み
;CALL KOJO_MESSAGE_COM

;調教者→調教対象
TFLAG:28 = 2
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、Willpower
DOWNBASE:TARGET:体力 += 5
DOWNBASE:TARGET:気力 += 30

SOURCE:TARGET:快Ｂ = 80
SOURCE:TARGET:情愛 = 20
SOURCE:TARGET:反感 = 10


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:鬱屈 += 10

;調教者が［幼稚］か［幼児退行］
IF TALENT:PLAYER:150 || TALENT:PLAYER:151
	TIMES SOURCE:TARGET:快Ｂ , 1.20
	TIMES SOURCE:TARGET:情愛 , 1.20
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者の指の汚れが移動
CALL MOVE_STAIN("胸", TARGET, "手", PLAYER)

;-------------------------------------------------
;吸精処理
;-------------------------------------------------
IF CFLAG:PLAYER:ＭＡＧ非被吸収 == 0
	LOCAL = (RAND:1+1) * BASE:LV
	CALL DRAIN_MAG,PLAYER,LOCAL,TARGET
ELSEIF CFLAG:TARGET:ＭＡＧ非被吸収 == 0
	LOCAL = (RAND:1+1) * BASE:LV
	CALL DRAIN_MAG,TARGET,LOCAL,PLAYER
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 5
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("レズ経験", A, TARGET)
	CALL ADDS_EXP("レズ経験", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ経験", A, TARGET)
	CALL ADDS_EXP("ＢＬ経験", A, PLAYER)
ENDIF

;依存度ベクトル
TFLAG:33 = 2


RETURN 1

;===================================================
;調教タイプ
;===================================================
@COMTYPE_6
RETURN COMTYPE("愛撫系")
