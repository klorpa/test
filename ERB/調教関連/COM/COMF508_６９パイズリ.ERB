IF ABL:2 == 0
	TIMES B , 1.00
ELSEIF ABL:2 == 1
	TIMES B , 1.20
ELSEIF ABL:2 == 2
	TIMES B , 1.40
ELSEIF ABL:2 == 3
	TIMES B , 1.60
ELSEIF ABL:2 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.00
ENDIF

;ABL:従順をみる
IF ABL:0 == 0
	TIMES B , 0.80
ELSEIF ABL:0 == 1
	TIMES B , 0.90
ELSEIF ABL:0 == 2
	TIMES B , 1.00
ELSEIF ABL:0 == 3
	TIMES B , 1.10
ELSEIF ABL:0 == 4
	TIMES B , 1.20
ELSE
	TIMES B , 1.30
ENDIF

;ABL:奉仕精神をみる
IF ABL:7 == 0
	TIMES B , 0.50
ELSEIF ABL:7 == 1
	TIMES B , 0.80
ELSEIF ABL:7 == 2
	TIMES B , 1.20
ELSEIF ABL:7 == 3
	TIMES B , 1.50
ELSEIF ABL:7 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.40
ENDIF

;TALENT:舌使い、猫舌をみる
SIF TALENT:52 || TALENT:54
	TIMES B , 2.00

;プレイヤーのABL:Ｂ感覚をみる
IF ABL:PLAYER:6 == 0
	TIMES B , 1.00
ELSEIF ABL:PLAYER:6 == 1
	TIMES B , 1.50
ELSEIF ABL:PLAYER:6 == 2
	TIMES B , 2.00
ELSEIF ABL:PLAYER:6 == 3
	TIMES B , 2.50
ELSEIF ABL:PLAYER:6 == 4
	TIMES B , 3.50
ELSE
	TIMES B , 5.00
ENDIF
	LOCAL:99 = B

;プレイヤーのABL:Ｃ感覚をみる
IF ABL:PLAYER:3 == 0
	TIMES B , 1.00
ELSEIF ABL:PLAYER:3 == 1
	TIMES B , 1.50
ELSEIF ABL:PLAYER:3 == 2
	TIMES B , 2.00
ELSEIF ABL:PLAYER:3 == 3
	TIMES B , 2.50
ELSEIF ABL:PLAYER:3 == 4
	TIMES B , 3.50
ELSE
	TIMES B , 5.00
ENDIF

;再装填処理中は射精ゲージは20分の1に
IF CFLAG:PLAYER:9 > 0
	B /= 20
	LOCAL:99 /= 20
ENDIF

SIF HAVE_PENIS(PLAYER)
	BASE:PLAYER:2 += B
SIF TALENT:PLAYER:オトコ == 0
	BASE:PLAYER:99 += LOCAL:99



;調教者←→調教対象
TFLAG:28 = 3
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、Willpower
DOWNBASE:TARGET:体力 += 10
DOWNBASE:TARGET:気力 += 100

SOURCE:TARGET:快Ｃ = 150
SOURCE:TARGET:快Ｂ = 150
SOURCE:TARGET:情愛 = 200
SOURCE:TARGET:性行動 = 500
SOURCE:TARGET:達成 = 300
SOURCE:TARGET:液体 = 80
SOURCE:TARGET:露出 = 100
SOURCE:TARGET:屈従 = 1200
SOURCE:TARGET:逸脱 = 700
SOURCE:TARGET:反感 = 700

;上のほうで計算した汚れデータ
SOURCE:TARGET:不潔 = Y*10 + 60

;調教者にＣPleasure、ＢPleasure
SOURCE:PLAYER:0 = 150
SOURCE:PLAYER:3 = 150
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:鬱屈 += 1000

;舌を使う調教では、調教者の舌使いによって、快感のソース増加
SIF TALENT:PLAYER:52
	TIMES SOURCE:TARGET:快Ｃ , 1.50

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
;射精先タイプの設定
TCVAR:PLAYER:ペニス使用対象 = TARGET
TCVAR:PLAYER:射精箇所 = 5
;射精先選択の可・不可
TFLAG:704 = 1

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者のＰの汚れが移動
CALL MOVE_STAIN("胸", TARGET, "ペニス", PLAYER)
;奴隷のＶ⇔調教者の口の汚れが移動
CALL MOVE_STAIN("ヴァギナ", TARGET, "口", PLAYER)

;-------------------------------------------------
;吸精処理
;-------------------------------------------------
IF CFLAG:PLAYER:ＭＡＧ非被吸収 == 0
	LOCAL = (RAND:7+1) * BASE:LV
	CALL DRAIN_MAG,PLAYER,LOCAL,TARGET
ELSEIF CFLAG:TARGET:ＭＡＧ非被吸収 == 0
	LOCAL = (RAND:7+1) * BASE:LV
	CALL DRAIN_MAG,TARGET,LOCAL,PLAYER
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 7
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("レズ経験", A, TARGET)
	CALL ADDS_EXP("レズ経験", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ経験", A, TARGET)
	CALL ADDS_EXP("ＢＬ経験", A, PLAYER)
ENDIF

;LoveEXP
IF (TALENT:3 == 1 || TALENT:6 == 1) && ASSIPLAY == 0
;	PRINTS EXPNAME:23
;	PRINTL +1
	CALL ADDS_EXP("愛情経験", 1, TARGET)
;	PRINTFORML LoveEXP(主人)＋１
	CALL ADDS_EXP("愛情経験", 1, MASTER)
ENDIF

;奴隷が猫舌持ちの場合は、調教者にSadoEXPを追加
IF TALENT:TARGET:54
	CALL ADDS_EXP("嗜虐快楽経験", 1, TARGET)
;	PRINTFORML %EXPNAME:32%＋１
ENDIF

;依存度ベクトル
TFLAG:33 = 2

;依存度補正値(主人かつ恋慕、淫乱、服従で1。親愛、娼婦、隷属で2）
IF (TALENT:3 || TALENT:4 || TALENT:5) && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF (TALENT:6 || TALENT:7 || TALENT:8) && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

;奉仕快楽フラグ
TFLAG:100 = 1

RETURN 1
