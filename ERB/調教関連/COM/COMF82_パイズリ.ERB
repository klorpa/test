@JUMP_COM82
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
;前回の調教がクンニか,フェラするか、シックスナインか６９パイズリだと６９パイズリに
IF GROUPMATCH(PREVCOM, 1, 2, 501, 508)
	CALL COM_ABLE_COMMON, 508
	SIF RESULT == 1
		RETURN 508
ENDIF
RETURN -1
@ACT_COM82
PRINTL Boobjob

;-------------------------------------------------
;実行決定
;-------------------------------------------------
TSTR:0 = パイズリ
;CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;射精ゲージチェック
;-------------------------------------------------
B = 2000

;ABL:調教者の技巧をみる
IF ABL:2 == 0
	TIMES B , 1.00
ELSEIF ABL:2 == 1
	TIMES B , 1.20
ELSEIF ABL:2 == 2
	TIMES B , 1.40
ELSEIF ABL:2 == 3
	TIMES B , 1.60
ELSEIF ABL:2 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.00
ENDIF

;ABL:従順をみる
IF ABL:0 == 0
	TIMES B , 0.80
ELSEIF ABL:0 == 1
	TIMES B , 0.90
ELSEIF ABL:0 == 2
	TIMES B , 1.00
ELSEIF ABL:0 == 3
	TIMES B , 1.10
ELSEIF ABL:0 == 4
	TIMES B , 1.20
ELSE
	TIMES B , 1.30
ENDIF

;ABL:奉仕精神をみる
IF ABL:7 == 0
	TIMES B , 0.50
ELSEIF ABL:7 == 1
	TIMES B , 0.80
ELSEIF ABL:7 == 2
	TIMES B , 1.20
ELSEIF ABL:7 == 3
	TIMES B , 1.50
ELSEIF ABL:7 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.40
ENDIF

;プレイヤーのABL:Ｃ感覚をみる
IF ABL:PLAYER:3 == 0
	TIMES B , 1.00
ELSEIF ABL:PLAYER:3 == 1
	TIMES B , 1.50
ELSEIF ABL:PLAYER:3 == 2
	TIMES B , 2.00
ELSEIF ABL:PLAYER:3 == 3
	TIMES B , 2.50
ELSEIF ABL:PLAYER:3 == 4
	TIMES B , 3.50
ELSE
	TIMES B , 5.00
ENDIF

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20


SIF HAVE_PENIS(PLAYER)
	BASE:PLAYER:2 += B

;調教対象→調教者
TFLAG:28 = 1
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、Willpower
DOWNBASE:TARGET:体力 += 10
DOWNBASE:TARGET:気力 += 100

SOURCE:TARGET:快Ｂ = 150
SOURCE:TARGET:情愛 = 150
SOURCE:TARGET:性行動 = 400
SOURCE:TARGET:達成 = 200
SOURCE:TARGET:屈従 = 1000
SOURCE:TARGET:逸脱 = 400
SOURCE:TARGET:反感 = 400

;上のほうで計算した汚れデータ
SOURCE:TARGET:不潔 = Y*10 + 60

;調教者にFEELＣ
SOURCE:PLAYER:0 = 150
;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:鬱屈 += 600

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
;射精先タイプの設定
TCVAR:PLAYER:ペニス使用対象 = TARGET
TCVAR:PLAYER:射精箇所 = 5
;射精先選択の可・不可
TFLAG:704 = 1

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ⇔調教者のＰの汚れが移動
CALL MOVE_STAIN("胸", TARGET, "ペニス", PLAYER)

;奉仕精神ＬＶ２以上、技巧ＬＶ２以上なら汚れをなめ取る（ボールギャグ使用時は除く）
IF ABL:7 >= 2 && ABL:2 >= 2 && TEQUIP:20 == 0
	;STAIN:PLAYER:2 = 2
	;タイミングをずらす
	TFLAG:お掃除フェラ発生 = 1
	TFLAG:8 = 1
ENDIF

;-------------------------------------------------
;吸精処理
;-------------------------------------------------
IF CFLAG:PLAYER:ＭＡＧ非被吸収 == 0
	LOCAL = (RAND:7+1) * BASE:LV
	CALL DRAIN_MAG,PLAYER,LOCAL,TARGET
ELSEIF CFLAG:TARGET:ＭＡＧ非被吸収 == 0
	LOCAL = (RAND:7+1) * BASE:LV
	CALL DRAIN_MAG,TARGET,LOCAL,PLAYER
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;LesbianEXP
A = 7
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("レズ経験", A, TARGET)
	CALL ADDS_EXP("レズ経験", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ経験", A, TARGET)
	CALL ADDS_EXP("ＢＬ経験", A, PLAYER)
ENDIF

;LoveEXP
IF (TALENT:3 == 1 || TALENT:6 == 1) && ASSIPLAY == 0
;	PRINTS EXPNAME:23
;	PRINTL +1
	CALL ADDS_EXP("愛情経験", 1, TARGET)
;	PRINTFORML LoveEXP(主人)＋１
	CALL ADDS_EXP("愛情経験", 1, MASTER)
ENDIF

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(主人かつ恋慕、淫乱、服従で1。親愛、娼婦、隷属で2）
IF (TALENT:3 || TALENT:4 || TALENT:5) && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF (TALENT:6 || TALENT:7 || TALENT:8) && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

TFLAG:100 = 1


RETURN 1
