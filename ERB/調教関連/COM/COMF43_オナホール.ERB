;-------------------------------------------------
;オナホール
;道具使用コマンド、レベル2
;-------------------------------------------------
@COMNAME43
IF TEQUIP:12 == 1
	RESULTS = Remove Onahole
	;オナホール解除
ELSE
	RESULTS = Onahole
ENDIF
@ACT_COM43
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
IF TEQUIP:25
	PRINTL 触手ペニス責め
	TSTR:0 = 触手ペニス責め
	SELECTCOM = 169
ELSE
	PRINTL Onahole
	TSTR:0 = オナホール
ENDIF
;CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:12 == 0
	TEQUIP:12 = 1
ELSE
	TEQUIP:12 = 0
ENDIF

;調教者→調教対象
TFLAG:28 = 2
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、Willpower
DOWNBASE:TARGET:体力 += 10
DOWNBASE:TARGET:気力 += 80

SOURCE:TARGET:道具快Ｃ = 200
SOURCE:TARGET:露出 = 20
SOURCE:TARGET:逸脱 = 30
SOURCE:TARGET:反感 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:鬱屈 += 30

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手ペニス責めなら、触手体液がペニスに付く
SIF TEQUIP:25
	CALL SET_STAIN("ペニス", "粘液", TARGET)

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("レズ経験", A, TARGET)
	CALL ADDS_EXP("レズ経験", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ経験", A, TARGET)
	CALL ADDS_EXP("ＢＬ経験", A, PLAYER)
ENDIF

;触手召喚時、TentacleEXPのリセットをする
SIF TEQUIP:25 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 1


RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM43
;オナホール装備中
IF TEQUIP:25
	PRINTL ＜触手ペニス責め中＞
ELSE
	PRINTL ＜オナホール装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
DOWNBASE:TARGET:体力 += 5
DOWNBASE:TARGET:気力 += 20

SOURCE:TARGET:道具快Ｃ += 100
SOURCE:TARGET:露出 += 10
SOURCE:TARGET:逸脱 += 15
SOURCE:TARGET:反感 += 15


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;TentacleEXP加算
SIF TEQUIP:25 == 1
	CALL ADDS_EXP("触手経験", 1, TARGET)
;	T += 1


RETURN 1

;===================================================
;調教タイプ
;===================================================
@COMTYPE_43
RETURN COMTYPE("道具系")


