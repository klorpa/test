;-------------------------------------------------
;ローター
;道具使用コマンド、レベル1
;-------------------------------------------------
@ACT_COM40
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------

PRINTL Rotor
TSTR:0 = ローター
;CALL KOJO_MESSAGE_COM

;調教者→調教対象
TFLAG:28 = 2
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、Willpower
DOWNBASE:TARGET:体力 += 10
DOWNBASE:TARGET:気力 += 80

SOURCE:TARGET:道具快Ｃ = 225
SOURCE:TARGET:露出 = 20
SOURCE:TARGET:逸脱 = 30
SOURCE:TARGET:反感 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:鬱屈 += 30

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	CALL ADDS_EXP("レズ経験", A, TARGET)
	CALL ADDS_EXP("レズ経験", A, PLAYER)
ELSEIF IS_GAY(TARGET,PLAYER)
	CALL ADDS_EXP("ＢＬ経験", A, TARGET)
	CALL ADDS_EXP("ＢＬ経験", A, PLAYER)
ENDIF

;依存度ベクトル
TFLAG:33 = 1


RETURN 1

;===================================================
;調教タイプ
;===================================================
@COMTYPE_40
RETURN COMTYPE("道具系")

