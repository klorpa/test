;-------------------------------------------------
;アイマスク
;SM系コマンド、レベル1
;-------------------------------------------------
@COMNAME105
RESULTS = Blindfold
SIF TEQUIP:18
	RESULTS = Remove Blindfold
@ACT_COM105
PRINTL Blindfold
TSTR:0 = アイマスク
;CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:18 == 0
	TEQUIP:18 = 1
ELSE
	TEQUIP:18 = 0
ENDIF

;調教者→調教対象
TFLAG:28 = 2
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、Willpower
DOWNBASE:TARGET:体力 += 0
DOWNBASE:TARGET:気力 += 80

SOURCE:TARGET:恐れ = 700
SOURCE:TARGET:露出 = 100
SOURCE:TARGET:逸脱 = 300
SOURCE:TARGET:反感 = 600

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;BondageEXPが高いと消費減少
IF EXP:51 < EXPLV:3
	TIMES DOWNBASE:TARGET:気力 , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES DOWNBASE:TARGET:気力 , 0.90
ELSE
	TIMES DOWNBASE:TARGET:気力 , 0.70
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL ADDS_EXP("緊縛経験", 2, TARGET)
;PRINTL BondageEXP＋２

A = 1
IF IS_LESBIAN(TARGET,PLAYER)
	PRINTFORML %EXPNAME_E(40)%+{A}
	CALL ADDS_EXP("レズ経験", A, TARGET)
ELSEIF IS_GAY(TARGET,PLAYER)
	PRINTFORML %EXPNAME_E(41)%+{A}
	CALL ADDS_EXP("ＢＬ経験", A, TARGET)
ENDIF

;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM105
PRINTL ＜Wearing Blindfold＞
;アイマスク装着中

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
DOWNBASE:TARGET:体力 += 0
DOWNBASE:TARGET:気力 += 40

SOURCE:TARGET:恐れ += 350
SOURCE:TARGET:露出 += 50
SOURCE:TARGET:逸脱 += 150
SOURCE:TARGET:反感 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;BondageEXPが高いと消費減少
A = 40
IF EXP:51 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
DOWNBASE:TARGET:気力 += A

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL ADDS_EXP("緊縛経験", 1, TARGET)
;PRINTL BondageEXP＋１

RETURN 1

;===================================================
;調教タイプ
;===================================================
@COMTYPE_105
RETURN COMTYPE("ＳＭ系")


