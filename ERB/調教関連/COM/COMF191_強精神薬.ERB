;-------------------------------------------------
;強精神薬
;特殊コマンド
;-------------------------------------------------
@ACT_COM191
PRINTL Potent mind medicine
TSTR:0 = 強精神薬
;CALL KOJO_MESSAGE_COM

ITEM:47 -= 1
TEQUIP:34 = 7

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、Willpower
DOWNBASE:TARGET:体力 += 20
DOWNBASE:TARGET:気力 += 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:TARGET:鬱屈 += 1000

;依存度ベクトル
TFLAG:33 = 0


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM191
IF TEQUIP:34 > 2
	PRINTL ＜強精神薬効果発揮中＞
	TEQUIP:34 -= 1
ELSEIF TEQUIP:34 == 2
	TEQUIP:34 = 1
	PRINTFORML %CALLNAME:TARGET%の強精神剤の効果が切れたようだ
	PRINTL ＜強精神薬反動中＞
ELSEIF TEQUIP:34 == 1
	PRINTL ＜強精神薬反動中＞
ENDIF


RETURN 1

