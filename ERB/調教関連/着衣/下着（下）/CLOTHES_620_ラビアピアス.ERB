
@CLOTHES_NAME_620
RESULTS = Labia Piecing

;露出部位
@CLOTHES_EXPOSE_620,ARG
;ARG = 露出する部位
;1 = 腕露出 2 = 足露出 3 = 脚露出 4 = 乳房露出 5 = 乳首露出 6 = ヘソ露出 7 = 陰唇露出 8 = 臀部露出


SELECTCASE ARG
	CASE 0
		RETURN 0
	CASEELSE
		RETURN 1
ENDSELECT

;装備部位
@CLOTHES_PART_620
RETURN 6

;服の前が開くか
;1 開けられる、2 開きっぱなし
@CLOTHES_OPENFRONT_620
RETURN 0

;股間の構造
;1 = ズボン、2 = ビキニタイプ、3 = スカート、4 = 穴開き、5 前開き、6 開閉可能
@CLOTHES_CROTCH_620
RETURN 4

;装備時の調教効果
@CLOTHES_SOURCE_620,ARG
IF FLAG:ショップコマンド == 0
	SOURCE:ARG:痛み += 25
	IF ARG == TARGET
		DOWNBASE:ARG:0 += 10
		DOWNBASE:ARG:1 += 10
	ENDIF
	IF SOURCE:ARG:快Ｃ > 0
		TIMES SOURCE:ARG:快Ｃ , 1.20
		IF ARG == TARGET
			TIMES DOWNBASE:ARG:0 , 1.30
			TIMES DOWNBASE:ARG:1 , 1.10
		ENDIF
	ENDIF
ELSE

ENDIF

;装備時の経験追加
@CLOTHES_EXP_620,ARG
IF FLAG:ショップコマンド == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <ラビアピアス着用中>\@ ARG == MASTER ? (主人) #\@\@ ARG == ASSI ? (助手) #\@
	IF TCVAR:ARG:獲得苦痛快楽経験
		TCVAR:ARG:獲得苦痛快楽経験 += MAX(TCVAR:ARG:獲得苦痛快楽経験*140/100 , 1)
		SIF ARG == TARGET
			TIMES DOWNBASE:ARG:1 , 1.10
	ENDIF
ELSE

ENDIF

;装備するための条件
@CLOTHES_PREREQUISITE_620,ARG
SIF IS_MALE(ARG)
	RETURN 0
SIF ARG == MASTER
	RETURN 1
SIF MARK:ARG:苦痛刻印 < 3
	RETURN 0
SIF ABL:ARG:従順 >= 4
	RETURN 1
SIF ABL:ARG:マゾっ気 >= 3
	RETURN 1
RETURN 0

@CLOTHES_PRICE_620
RETURN 1500
