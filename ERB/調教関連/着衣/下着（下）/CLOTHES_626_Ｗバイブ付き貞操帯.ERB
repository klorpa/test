;装備時の調教効果
@CLOTHES_SOURCE_626,ARG
IF FLAG:ショップコマンド == 0
	IF ARG == TARGET
		TFLAG:19 = 1
	ENDIF
	SOURCE:ARG:快Ｖ += 125
	SOURCE:ARG:露出 += 10
	SOURCE:ARG:逸脱 += 20

	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:ARG:抑圧 || TALENT:ARG:抵抗
		SOURCE:ARG:鬱屈 += 20
		
	;Vへの苦痛は先に処理しておく
	;EXP:ARG:Ｖ経験をみる（処女はありえない）
	A = 25
	B = 20
	IF EXP:ARG:0 < EXPLV:2
		TIMES A , 0.80
		TIMES B , 1.20
	ELSEIF EXP:ARG:0 < EXPLV:3
		TIMES A , 0.40
	ELSEIF EXP:ARG:0 < EXPLV:4
		TIMES A , 0.10
	ELSEIF EXP:ARG:0 < EXPLV:5
		TIMES A , 0.00
	ELSEIF EXP:ARG:0 >= EXPLV:5
		TIMES A , 0.00
	ENDIF

	;PALAM:ARG:潤滑をみる
	IF PALAM:ARG:4 < PALAMLV:1
		TIMES A , 1.20
		TIMES B , 1.50
	ELSEIF PALAM:ARG:4 < PALAMLV:2
		TIMES A , 0.70
		TIMES B , 1.20
	ELSEIF PALAM:ARG:4 < PALAMLV:3
		TIMES A , 0.40
	ELSEIF PALAM:ARG:4 < PALAMLV:4
		TIMES A , 0.10
	ELSEIF PALAM:ARG:4 >= PALAMLV:4
		TIMES A , 0.10
	ENDIF
	SOURCE:ARG:7 += A
	SOURCE:ARG:18 += B
	
	SOURCE:ARG:快Ａ += 125
	SOURCE:ARG:痛み += 100
	SOURCE:ARG:露出 += 25
	SOURCE:ARG:逸脱 += 25
	SOURCE:ARG:反感 += 40

	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:ARG:抑圧 || TALENT:ARG:抵抗
		SOURCE:ARG:鬱屈 += 20
		
	;Vへの苦痛は先に処理しておく
	;EXP:ARG:Ｖ経験をみる（処女はありえない）
	A = 100
	B = 40
	IF EXP:ARG:1 < EXPLV:1
		TIMES A , 3.00
		TIMES B , 3.00
	ELSEIF EXP:ARG:1 < EXPLV:2
		TIMES A , 1.20
		TIMES B , 2.00
	ELSEIF EXP:ARG:1 < EXPLV:3
		TIMES A , 0.80
		TIMES B , 1.50
	ELSEIF EXP:ARG:1 < EXPLV:4
		TIMES A , 0.60
		TIMES B , 1.20
	ELSEIF EXP:ARG:1 < EXPLV:5
		TIMES A , 0.40
	ELSEIF EXP:ARG:1 >= EXPLV:5
		TIMES A , 0.20
	ENDIF


	;PALAM:ARG:潤滑をみる
	IF PALAM:ARG:4 < PALAMLV:1
		TIMES A , 1.20
		TIMES B , 2.00
	ELSEIF PALAM:ARG:4 < PALAMLV:2
		TIMES A , 1.00
		TIMES B , 1.50
	ELSEIF PALAM:ARG:4 < PALAMLV:3
		TIMES A , 0.60
	ELSEIF PALAM:ARG:4 < PALAMLV:4
		TIMES A , 0.30
	ELSEIF PALAM:ARG:4 >= PALAMLV:4
		TIMES A , 0.20
	ENDIF
	SOURCE:ARG:7 += A
	SOURCE:ARG:18 += B
	IF ARG == TARGET
		DOWNBASE:ARG:0 += 30
		DOWNBASE:ARG:1 += 80
		DOWNBASE:ARG:1 += 50
		DOWNBASE:ARG:0 += 10
	ENDIF
	
ELSE
ENDIF


;装備時の経験追加
@CLOTHES_EXP_626,ARG
IF FLAG:ショップコマンド == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <Ｗバイブ挿入中>\@ ARG == MASTER ? (主人) #\@\@ ARG == ASSI ? (助手) #\@
	IF SELECTCOM == 11
		CALL ADDS_EXP("Ｖ経験", 2, ARG)
		CALL ADDS_EXP("Ａ経験", 2, ARG)
	ELSE
		CALL ADDS_EXP("Ｖ経験", 1, ARG)
		CALL ADDS_EXP("Ａ経験", 1, ARG)
	ENDIF
	
ELSE
ENDIF

;装備するための条件
@CLOTHES_PREREQUISITE_626,ARG
SIF IS_MALE(ARG)
	RETURN 0
SIF TALENT:ARG:1 || TALENT:ARG:2
	RETURN 0
SIF ARG == MASTER
	RETURN 1
SIF EXP:ARG:Ｖ経験 < 10
	RETURN 0
SIF EXP:ARG:Ａ経験 < 30 && ABL:ARG:Ａ感覚 < 2
	RETURN 0
SIF TALENT:ARG:小人体型 && EXP:ARG:Ｖ拡張経験 < 3 && EXP:ARG:Ａ拡張経験 < 3 && TALENT:MASTER:禁断の知識 == 0
	RETURN 0
SIF ABL:ARG:従順 >= 3
	RETURN 1
SIF ABL:ARG:マゾっ気 >= 3
	RETURN 1
SIF ABL:ARG:Ｖ感覚 >= 2 && ABL:ARG:Ａ感覚 >= 3
	RETURN 1
RETURN 0

