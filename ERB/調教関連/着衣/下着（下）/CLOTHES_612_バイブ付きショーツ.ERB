
@CLOTHES_NAME_612
RESULTS = Vibrator Panties

;露出部位
@CLOTHES_EXPOSE_612,ARG
;ARG = 露出する部位
;1 = 腕露出 2 = 足露出 3 = 脚露出 4 = 乳房露出 5 = 乳首露出 6 = ヘソ露出 7 = 陰唇露出 8 = 臀部露出


SELECTCASE ARG
	CASE 7,8
		RETURN 0
	CASEELSE
		RETURN 1
ENDSELECT

;装備部位
@CLOTHES_PART_612
RETURN 6

;服の前が開くか
;1 開けられる、2 開きっぱなし
@CLOTHES_OPENFRONT_612
RETURN 0

;股間の構造
;1 = ズボン、2 = ビキニタイプ、3 = スカート、4 = 穴開き、5 前開き、6 開閉可能
@CLOTHES_CROTCH_612
RETURN 2

;装備時の調教効果
@CLOTHES_SOURCE_612,ARG
IF FLAG:ショップコマンド == 0
	IF ARG == TARGET
		TFLAG:19 = 1
	ENDIF
	SOURCE:ARG:快Ｖ += 125
	SOURCE:ARG:露出 += 10
	SOURCE:ARG:逸脱 += 20

	;抑圧、抵抗持ちには、抑鬱ソース追加
	SIF TALENT:ARG:抑圧 || TALENT:ARG:抵抗
		SOURCE:ARG:鬱屈 += 20
		
	;Vへの苦痛は先に処理しておく
	;EXP:ARG:Ｖ経験をみる（処女はありえない）
	A = 25
	B = 20
	IF EXP:ARG:0 < EXPLV:2
		TIMES A , 0.80
		TIMES B , 1.20
	ELSEIF EXP:ARG:0 < EXPLV:3
		TIMES A , 0.40
	ELSEIF EXP:ARG:0 < EXPLV:4
		TIMES A , 0.10
	ELSEIF EXP:ARG:0 < EXPLV:5
		TIMES A , 0.00
	ELSEIF EXP:ARG:0 >= EXPLV:5
		TIMES A , 0.00
	ENDIF

	;PALAM:ARG:潤滑をみる
	IF PALAM:ARG:4 < PALAMLV:1
		TIMES A , 1.20
		TIMES B , 1.50
	ELSEIF PALAM:ARG:4 < PALAMLV:2
		TIMES A , 0.70
		TIMES B , 1.20
	ELSEIF PALAM:ARG:4 < PALAMLV:3
		TIMES A , 0.40
	ELSEIF PALAM:ARG:4 < PALAMLV:4
		TIMES A , 0.10
	ELSEIF PALAM:ARG:4 >= PALAMLV:4
		TIMES A , 0.10
	ENDIF
	SOURCE:ARG:7 += A
	SOURCE:ARG:18 += B
	IF ARG == TARGET
		DOWNBASE:1 += 50
		DOWNBASE:0 += 10
	ENDIF
	
ELSE
ENDIF

;装備時の経験追加
@CLOTHES_EXP_612,ARG
IF FLAG:ショップコマンド == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <バイブ挿入中>\@ ARG == MASTER ? (主人) #\@\@ ARG == ASSI ? (助手) #\@
	IF SELECTCOM == 11
		CALL ADDS_EXP("Ｖ経験", 2, ARG)
	ELSE
		CALL ADDS_EXP("Ｖ経験", 1, ARG)
	ENDIF
ELSE

ENDIF


;装備するための条件
@CLOTHES_PREREQUISITE_612,ARG
SIF IS_MALE(ARG)
	RETURN 0
SIF TALENT:ARG:1 || TALENT:ARG:2
	RETURN 0
SIF ARG == MASTER
	RETURN 1
SIF EXP:ARG:Ｖ経験 < 10
	RETURN 0
SIF TALENT:ARG:小人体型 && EXP:ARG:Ｖ拡張経験 < 3 && TALENT:MASTER:禁断の知識 == 0
	RETURN 0
SIF ABL:ARG:従順 >= 3
	RETURN 1
SIF ABL:ARG:マゾっ気 >= 2
	RETURN 1
SIF ABL:ARG:Ｖ感覚 >= 2
	RETURN 1
RETURN 0

@CLOTHES_PRICE_612
