@CLOTHES_NAME_720
RESULTS = Rubber Suit

;露出部位
@CLOTHES_EXPOSE_720,ARG
;ARG = 露出する部位
;1 = 腕露出 2 = 足露出 3 = 脚露出 4 = 乳房露出 5 = 乳首露出 6 = ヘソ露出 7 = 陰唇露出 8 = 臀部露出
SELECTCASE ARG
	CASE 1,2,3,4,5,6
		RETURN 0
	CASEELSE
		RETURN 1
ENDSELECT

;装備部位
@CLOTHES_PART_720
RETURN 7

;服の前が開くか
;1 開けられる、2 開きっぱなし
@CLOTHES_OPENFRONT_720
RETURN 1

;胸の構造
; 0:開けられない 1:ボタン式 2:チャック式 4:上からこんにちは 8:たくしあげてこんにちは 16:和服など、合わせる衣装 32:前から差し込めそうな穴 64:口元-胸元間にペニス入るスペース（ビット演算）
@CLOTHES_BREAST_720
RETURN 2

;股間の構造
;1 = ズボン、2 = ビキニタイプ、3 = スカート、4 = 穴開き、5 前開き、6 開閉可能
@CLOTHES_CROTCH_720
RETURN 6

;装備時の調教効果
@CLOTHES_SOURCE_720,ARG = -1
RETURN 0

;装備時の経験追加
@CLOTHES_EXP_720,ARG = -1
IF FLAG:ショップコマンド == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <ラバースーツ着用中>\@ ARG == MASTER ? (主人) #\@\@ ARG == ASSI ? (助手) #\@
	IF TCVAR:ARG:獲得嗜虐快楽経験
		TCVAR:ARG:獲得嗜虐快楽経験 += MAX(TCVAR:ARG:獲得嗜虐快楽経験*140/100 , 1)
		SIF ARG == TARGET
			TIMES DOWNBASE:ARG:1 , 1.20
	ENDIF
	IF TCVAR:ARG:獲得苦痛快楽経験
		TCVAR:ARG:獲得苦痛快楽経験 += MAX(TCVAR:ARG:獲得苦痛快楽経験*140/100 , 1)
		SIF ARG == TARGET
			TIMES DOWNBASE:ARG:1 , 1.20
	ENDIF
ELSE
ENDIF

@CLOTHES_PRICE_720
RETURN 2000

;触覚
;1 = スルー 2 = 上から伝わる 4 = 潜り込ませられる
;ARG 0 = Ｃ 1 = Ｖ 2 = Ａ 3 = 乳首 4 = 乳房
@CLOTHES_触覚_720,ARG
SELECTCASE ARG
	CASE 0 TO 4
		RETURN 2
ENDSELECT
