;装備時の経験追加
@CLOTHES_EXP_307,ARG = -1
IF FLAG:ショップコマンド == 0
	SIF ARG == -1
		RETURN 0
	PRINTFORML <エプロンドレス着用中>\@ ARG == MASTER ? (主人) #\@\@ ARG == ASSI ? (助手) #\@
	IF TCVAR:ARG:獲得奉仕快楽経験
		TCVAR:ARG:獲得奉仕快楽経験 += MAX(TCVAR:ARG:獲得奉仕快楽経験*140/100 , 1)
		SIF ARG == TARGET
			TIMES DOWNBASE:ARG:1 , 1.10
	ENDIF
ELSE

ENDIF

