;※Not actually a translation, but I put it in this folder to make sure it doesn't conflict with anything added by the japanese devs
;@DUNGEON_WALL_COLOR_
;Returns the wall color to be used in the dungeon
;It should also be possible to return a conditional color
;FLAG:現M is useable here and ARG and ARG:1 get the X and Y coordinate of the tile,
;but this might affect performance
;----------------------------------------------------------

;Shinjuku Hygienic Hospital
@DUNGEON_WALL_COLOR_3, ARG, ARG:1
SETCOLOR 0xd3d3d3

;Mikage-cho Subway Station
@DUNGEON_WALL_COLOR_9, ARG, ARG:1
SETCOLOR 0x696969

;Lost Forest
@DUNGEON_WALL_COLOR_12, ARG, ARG:1
SETCOLOR 0x006000

;Ginza Underpass
@DUNGEON_WALL_COLOR_20, ARG, ARG:1
SETCOLOR 0x808080

;Tartarus
@DUNGEON_WALL_COLOR_70, ARG, ARG:1
SELECTCASE (ダンジョンフラグ:70:50)+1

CASE 1
SETCOLOR 0x008b8b

CASE 2 TO 10
;Thebel(2F-16F)
SETCOLOR 0x3cb371
;CASE 5 to 10

CASE 11 to 20
;Arqa(17F to 64F)
SETCOLOR 0x8b008b
;CASE 16 to 20


CASE 21 to 30
;Yabbashah(65F to 114F)
SETCOLOR 0x4682b4
;CASE 26 to 30

CASE 31 to 39
;Tziah(115F to 164F)
SETCOLOR 0xffd700
;CASE 36 to 40
;Harabah(165F to 214F)
	SELECTCASE RAND:4
		CASE 0
		SETCOLOR 0x8a2be2
		CASE 1
		SETCOLOR 0x0000cd
		CASE 2
		SETCOLOR 0x90ee90
		CASE 3
		SETCOLOR 0xff6347
	ENDSELECT

CASE 40 to 48
;Adamah(215F to 254F)
	SELECTCASE (ARG + ARG:1) % 3
		CASE 0
		SETCOLOR 0x87CEFA
		CASE 1
		SETCOLOR 0x87CEEB
		CASE 2
		SETCOLOR 0xF0FFFF
	ENDSELECT
CASE 49
	SELECTCASE (ARG + ARG:1) % 3
	;RAND:3
		CASE 0
		SETCOLOR 0x696969
		CASE 1
		SETCOLOR 0x8FBC8F
		CASE 2
		SETCOLOR 0x2F4F4F
	ENDSELECT

CASE -10 to -1
;Monad
	SELECTCASE (ARG + ARG:1) % 2
		CASE 0
		SETCOLOR 0x222222
		CASE 1
		SETCOLOR 0xFFFF00
	ENDSELECT

CASEELSE

ENDSELECT

