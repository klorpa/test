				EQUIP:ARG:LOCALS = [[スキル:ＧＵＮ]]
				CFLAG:ARG:ターゲット = 17
			;10%~30%で暗黒マハ・マグナ
			CASE 40 + LOCAL:1 TO 30 + LOCAL:1 * 2
				CFLAG:ARG:入力行動 = [[スキル:暗黒マハ・マグナ]]
		ENDSELECT
	ENDIF
ELSE
