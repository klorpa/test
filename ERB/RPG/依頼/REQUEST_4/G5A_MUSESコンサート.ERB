		CFLAG:ARG:入力行動 = MAX(EQUIP:ARG:特殊弾1, EQUIP:ARG:特殊弾2)
		EQUIP:ARG:特殊弾1 = [[スキル:ＧＵＮ]]
		EQUIP:ARG:特殊弾2 = [[スキル:ＧＵＮ]]
		CFLAG:ARG:ターゲット = 17
		SIF POS(4) >= 0 || POS(5) >= 0 || POS(6) >= 0
			CFLAG:ARG:ターゲット = 18
	ELSE
		;2回目の銃攻撃は後列を狙う
		SELECTCASE LOCAL
			;30%で特殊弾
			CASE 0 TO 29
				CFLAG:ARG:入力行動 = EQUIP:ARG:LOCALS
				EQUIP:ARG:LOCALS = [[スキル:ＧＵＮ]]
				CFLAG:ARG:ターゲット = 17 + RAND:2
			;30%~50%で暗黒マハマグナ
			CASE 30 TO 59 + LOCAL:1
				CFLAG:ARG:入力行動 = [[スキル:暗黒マハ・マグナ]]
		ENDSELECT
