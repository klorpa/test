							EQUIP:ARG:特殊弾3 = [[スキル:ＧＵＮ]]
							LOCAL:2 = 1
							BREAK
						ENDIF
					NEXT
				ELSE
					FOR LOCAL:3, 1, 7
						IF POS(LOCAL:3) >= 0 && GET_STATE(CFLAG:(POS(LOCAL:3)):ステート) != "DYING" && CFLAG:POS(LOCAL:3):防御フラグ
							CFLAG:ARG:ターゲット = 17 + (LOCAL:3 > 3)
							CFLAG:ARG:入力行動 = EQUIP:ARG:特殊弾3
							EQUIP:ARG:特殊弾3 = [[スキル:ＧＵＮ]]
							LOCAL:2 = 1
							BREAK
						ENDIF
					NEXT
				ENDIF
			ENDIF
		;0%〜20%で特殊弾を撃ちこんでくる
		CASE 30 + LOCAL:1 TO LOCAL:1 * 2
			CFLAG:ARG:入力行動 = EQUIP:ARG:LOCALS
			EQUIP:ARG:LOCALS = [[スキル:ＧＵＮ]]
	ENDSELECT
ELSEIF CFLAG:ARG:行動した回数 == 1
	;2回目の銃攻撃は前列狙い
	;ノイズショットコンボ,一回目でノイズショットを撃ってた場合、二回目は前列に特殊弾を打ち込む
	IF LOCAL:2
