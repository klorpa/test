IF CFLAG:ARG:行動した回数 == 0
	;ノイズショットコンボフラグ
	LOCAL:2 = 0
	SELECTCASE LOCAL
		;ニャルルートでは30%~50%でノイズショットコンボを狙う
		;ガードしている味方がいるかどうかを見て、ガードしている味方がいる場合、そいつがいる列にノイズショットを打ち込んでくる
		;ガードしている相手がいない場合汎用に流れるけど、それで特殊弾撃ってくる率が減るということもないので注意
		CASE 0 TO 29 + LOCAL:1
			IF STRFLAG_NUM_EV("ニャル進行", , , , [[イベント:ペルソナ２]])
				IF RAND:3
					FOR LOCAL:3, 6, 0, -1
						IF POS(LOCAL:3) >= 0 && GET_STATE(CFLAG:(POS(LOCAL:3)):ステート) != "DYING" && CFLAG:POS(LOCAL:3):防御フラグ
							CFLAG:ARG:ターゲット = 17 + (LOCAL:3 > 3)
