			ELSEIF NO:L_POSITION == [[キャラ:ヤマト]]
				L_NO = L_POSITION
			;該当する位置のキャラが死んでない
			ELSEIF CFLAG:L_POSITION:ステート != GET_STATE_NUM("DYING")
				L_CNT ++
			ENDIF
		NEXT
		;ヤマトが死んでたら
		SIF CFLAG:L_NO:ステート == GET_STATE_NUM("DYING")
			RETURN
		
		;ヤマトの行動回数調整
