	;-----------------------------
	CASE 4057 , 3137 , 3147
		L_CNT = 1
		
		FOR LOCAL, 7 , 17
			L_POSITION = POS(LOCAL)
			
			;ポラリスじゃない、あるいは誰もいない
			SIF L_POSITION < 0 || NO:L_POSITION != 3311
				CONTINUE
			
			;ボスフラグついた本体だったら
			SIF CFLAG:L_POSITION:ボスフラグ == 1
				L_NO = L_POSITION
				
			;該当するキャラが死んでない
			IF CFLAG:L_POSITION:ステート != GET_STATE_NUM("DYING")
				L_CNT ++
			;取り巻きが死んで３ターン立った
			ELSEIF !CFLAG:L_POSITION:ボスフラグ && CFLAG:L_POSITION:ステート経過ターン > 2
				CALL MESSAGE_BL(3,,CALLNAME:L_POSITION+"が再生した",)
				CFLAG:L_POSITION:ステート = 0
				CFLAG:L_POSITION:ステート経過ターン = 0
				CALL HEALTH_CHARA,(L_POSITION)
				
				L_CNT ++
			ENDIF
		NEXT
		
		
		;本体が死んでたら
		IF CFLAG:L_NO:ステート == GET_STATE_NUM("DYING")
			FLAG:勝利フラグ = 1
		;あなたが死んでたら
		ELSEIF CFLAG:MASTER:ステート == GET_STATE_NUM("DYING")
			FLAG:敗北フラグ = 1
		;ポラリスの行動回数調整
		ELSEIF L_CNT < CFLAG:L_NO:行動回数
			CFLAG:L_NO:行動回数 = L_CNT
			CALL MESSAGE_B(3,,"ポラリスの行動回数が減少した！",)
		ELSEIF L_CNT > CFLAG:L_NO:行動回数
			CFLAG:L_NO:行動回数 = L_CNT
			CALL MESSAGE_B(3,,"ポラリスの行動回数が増えた！",)
		ENDIF
