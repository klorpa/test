				L_CNT++
		NEXT
		;- 赤
		SETCOLOR 0xFF0000
		
		;ミザール本体の処理
		IF FINDCHARA_ENEMY([[キャラ:ミザール]]) == 1 || FINDCHARA_ENEMY([[キャラ:ミザール]]) == 2
			L_POSITION = RESULT:1
			LOCAL = 現HP割合(L_POSITION)
			;本体HPの減り具合によって分岐させる
			IF LOCAL < 30 && L_FLAG_EVENT_DIGIT == 55
				ABL:L_POSITION:スキル4 = [[スキル:ヘルストライク]]
			ELSEIF LOCAL < 60 && L_FLAG_EVENT_DIGIT == 54
				ABL:L_POSITION:スキル3 = [[スキル:貫通]]
			ELSEIF LOCAL >= 80 || L_FLAG_EVENT_DIGIT != 53
				GOTO MIZA_BUNTAI
			ENDIF
			
			;フラグ進行
			FLAG:デビサバ２進行度++
			
			CALL MESSAGE_B(3,,"ミザールが分裂した！",)
			
			;分裂数加算
			L_I += 2
			
			;ミザール強化
			BASE:L_POSITION:LV += 1
			BASE:L_POSITION:力 += 2
			BASE:L_POSITION:速さ += 1
			BASE:L_POSITION:運 += 2
			
			CALL SYNC_STATUS,L_POSITION
		ENDIF
		$MIZA_BUNTAI
		;分体の分裂処理。空きがなければ分裂しない
		IF FINDCHARA_ENEMY([[キャラ:ミザール分体]]) == 1 || FINDCHARA_ENEMY([[キャラ:ミザール分体]]) == 2
			FOR LOCAL,7,17
				L_POSITION = POS(LOCAL)
				SIF L_POSITION < 0 || ( NO:L_POSITION != [[キャラ:ミザール分体]] )
					CONTINUE
				
				IF 現HP割合(L_POSITION) < 50 && L_I < L_CNT
					CALL MESSAGE_B(3,,"ミザール分体が分裂した！",)
					CALL HEALTH_CHARA,(CHARANUM-1)
					
					;分裂数加算
					L_I ++
				ENDIF
			NEXT
		ENDIF
		;実際に分体増やす処理
		FOR LOCAL ,7,17
			SIF L_I == 0
				BREAK
			SIF POS(LOCAL) > 0
				CONTINUE
			
			CALL SET_ENEMY,LOCAL,[[キャラ:ミザール分体]],REQUEST_30_BASE_LV(6),0
			
			LOCAL = 7
			L_I --
		NEXT
		RESETCOLOR
ENDSELECT