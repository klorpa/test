@PLAYABLE_REQUEST_5
SELECTCASE 依頼フラグ:5:0
	CASE 0
		IF (ダンジョンフラグ:1:1 == 1 || ダンジョンフラグ:34:8 == 1 || ダンジョンフラグ:61:0 == 5)
			RESULTS = Request to Investigate a Professor's House
			RETURN 1
		ENDIF
	CASE 1
		IF ダンジョンフラグ:49:0 == 1
			RESULTS = Hideout of the Professor
			RETURN 1
		ENDIF
	CASE 2
		IF ダンジョンフラグ:81:0 == 1
			RESULTS = Elimination of Subversion
			RETURN 1
		ENDIF

ENDSELECT
RETURN 0

@EXPLAIN_REQUEST_5
