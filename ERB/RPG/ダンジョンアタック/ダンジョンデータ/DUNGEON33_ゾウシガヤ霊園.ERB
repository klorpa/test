;========================
;黒のバイザーイベント
;========================
@BLACKVISOR_USE,ARG

	PRINTL Who will you fight against?
	X = ARG
	REPEAT 10
		TRYCCALLFORM BOSS_NAME_{X}
			IF RESULT != 0
				IF CSVCSTR(RESULT,20,0) != ""
					;CSTRで種族名が指定されているならそれを表示
					PRINTFORML [{X}] %CSVCSTR(RESULT,20,0)% %CSVNAME(RESULT,0)%
				ELSE
					PRINTFORML [{X}] %STR:(CSVABL(RESULT,GETNUM(ABL,"種族"),0))% %CSVNAME(RESULT,0)%
				ENDIF
			ENDIF
		CATCH
		ENDCATCH
		X = X + 1
	REND
	
	PRINTW [0] Return
	$INPUT_SUMMON_LOOP
	INPUT
	IF RESULT != 0
		X = RESULT
		TRYCCALLFORM BOSS_NAME_{X}
			IF RESULT != 0
				TRYCCALLFORM BOSS_SUMMON_{X}
				CATCH
					PRINTW But nothing happened...
				ENDCATCH
			ELSE
				GOTO INPUT_SUMMON_LOOP
			ENDIF
		CATCH
			GOTO INPUT_SUMMON_LOOP
		ENDCATCH
	ELSE
		RETURN 0
	ENDIF 
