					ELSE
						PRINTFORML [{X}] %STR:(CSVABL(RESULT,GETNUM(ABL,"種族"),0))% %CSVNAME(RESULT,0)%
					ENDIF
				ENDIF
				CATCH
				ENDCATCH
			ENDIF
		CATCH
			
		ENDCATCH

		X = X + 1
	REND	
	PRINTW [0] Return
	
	$INPUT_BELL_LOOP
	INPUT
	IF RESULT == 0
		
	ELSE
