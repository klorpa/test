	CASE 1400
		IF ダンジョンフラグ:13:6 == 2
			RESULTS = □
		ELSE
			SETCOLOR 0x00ff00
			RESULTS = 占
		ENDIF
	CASE 1401
		SETCOLOR 0x00ff00
		RESULTS = ｍ
	CASE 1402
		SETCOLOR 0x00ff00
		RESULTS = ｍ
ENDSELECT

