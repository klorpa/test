		CFLAG:ARG:ＨＰ補正 *= 100
		BASE:ARG:ＨＰ *= 100
		CFLAG:ARG:603 = BASE:ARG:速さ
		BASE:ARG:速さ = 500
		MAXBASE:ARG:速さ = 500
		CFLAG:ARG:604 = BASE:ARG:運
		BASE:ARG:運 = 500
		MAXBASE:ARG:運 = 500
		CALL SYNC_STATUS,ARG
	ENDIF
	CFLAG:ARG:クリティカル強化 = 8
	CFLAG:ARG:気合フラグ = 1
	CFLAG:ARG:入力行動 = [[スキル:地母の晩餐]]
ELSEIF LOCAL == 99
	;寝てる奴いれば永眠の誘い
	IF CFLAG:ARG:603 > 0 && CFLAG:ARG:604 > 0
		BASE:ARG:力 -= 500
		MAXBASE:ARG:力 -= 500
		CFLAG:ARG:ＨＰ補正 /= 100
		BASE:ARG:ＨＰ /= 100
		BASE:ARG:速さ = CFLAG:ARG:603
		MAXBASE:ARG:速さ = CFLAG:ARG:603
		CFLAG:ARG:603 = 0
		BASE:ARG:運 = CFLAG:ARG:604
		MAXBASE:ARG:運 = CFLAG:ARG:604
		CFLAG:ARG:604 = 0
		CALL SYNC_STATUS,ARG
	ENDIF
	CFLAG:ARG:入力行動 = [[スキル:永眠の誘い]]
ELSE
	IF CFLAG:ARG:603 > 0 && CFLAG:ARG:604 > 0
		BASE:ARG:力 -= 500
		MAXBASE:ARG:力 -= 500
		CFLAG:ARG:ＨＰ補正 /= 100
		BASE:ARG:ＨＰ /= 100
		BASE:ARG:速さ = CFLAG:ARG:603
		MAXBASE:ARG:速さ = CFLAG:ARG:603
		CFLAG:ARG:603 = 0
		BASE:ARG:運 = CFLAG:ARG:604
		MAXBASE:ARG:運 = CFLAG:ARG:604
		CFLAG:ARG:604 = 0
		CALL SYNC_STATUS,ARG
	ENDIF
	;特に何もなければランダム行動に。
	CALL ランダム行動,ARG
