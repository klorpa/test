			ELSE
				LOCAL = 101
			ENDIF
			BREAK
		ELSEIF CFLAG:(FLAG:LOCALS):ステート == GET_STATE_NUM("SLEEP")
			LOCAL = 99
			SIF BASE:(FLAG:LOCALS):DYING > 10
				LOCAL = 1
			BREAK
		ENDIF
	NEXT
NEXT
IF (CFLAG:ARG:602 == 0) && (((BASE:ARG:ＨＰ)*100)/(MAXBASE:ARG:ＨＰ) < 51)
	;HP半減で一度メ・ディアラハン
	IF CFLAG:ARG:603 > 0 && CFLAG:ARG:604 > 0
		BASE:ARG:力 -= 500
		MAXBASE:ARG:力 -= 500
		CFLAG:ARG:ＨＰ補正 /= 100
		BASE:ARG:ＨＰ /= 100
		BASE:ARG:速さ = CFLAG:ARG:603
		MAXBASE:ARG:速さ = CFLAG:ARG:603
		CFLAG:ARG:603 = 0
		BASE:ARG:運 = CFLAG:ARG:604
		MAXBASE:ARG:運 = CFLAG:ARG:604
		CFLAG:ARG:604 = 0
		CALL SYNC_STATUS,ARG
	ENDIF
	CFLAG:ARG:入力行動 = [[スキル:メ・ディアラハン]]
	CFLAG:ARG:602 = 1
ELSEIF LOCAL == 101
	;剣撃・打撃に耐性あってガードキルまだならガードブレイクる
	IF CFLAG:ARG:603 == 0 || CFLAG:ARG:604 == 0
		BASE:ARG:力 += 500
		MAXBASE:ARG:力 += 500
		CFLAG:ARG:ＨＰ補正 *= 100
		BASE:ARG:ＨＰ *= 100
		CFLAG:ARG:603 = BASE:ARG:速さ
		BASE:ARG:速さ = 500
		MAXBASE:ARG:速さ = 500
		CFLAG:ARG:604 = BASE:ARG:運
		BASE:ARG:運 = 500
		MAXBASE:ARG:運 = 500
		CALL SYNC_STATUS,ARG
	ENDIF
	CFLAG:ARG:入力行動 = [[スキル:打撃ガードブレイク]]
ELSEIF LOCAL == 1
	;剣撃・打撃に耐性あるなら地母の晩餐で突然の死
	IF CFLAG:ARG:603 == 0 || CFLAG:ARG:604 == 0
		BASE:ARG:力 += 500
