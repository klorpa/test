	FOR LOCAL:2,1,7
		IF CFLAG:(FLAG:LOCALS):物理反射フラグ || MAXBASE:(FLAG:LOCALS):剣撃 == 999 || MAXBASE:(FLAG:LOCALS):剣撃 <= 0 || MAXBASE:(FLAG:LOCALS):打撃 == 999 || MAXBASE:(FLAG:LOCALS):打撃 <= 0
