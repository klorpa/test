@戦闘能力修正_3603,ARG,ARG:1 = -1

SELECTCASE ARG
	CASE 2
		SIF ARG:1 == -1
			RETURN 5
		IF EQUIP:(ARG:1):頭 == 3203 && EQUIP:(ARG:1):足 == 4601
			LOCAL = BASE:(ARG:1):LV / 3
			LOCAL += ABL:(ARG:1):Ｃ感覚 + ABL:(ARG:1):Ｖ感覚 + ABL:(ARG:1):Ａ感覚 + ABL:(ARG:1):Ｂ感覚
			SIF LOCAL < 5
				LOCAL = 5
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
	CASE 3
		SIF ARG:1 == -1
			RETURN 5
		IF EQUIP:(ARG:1):頭 == 3203 && EQUIP:(ARG:1):足 == 4601
			LOCAL = BASE:(ARG:1):LV / 3
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
	CASE 4
		SIF ARG:1 == -1
			RETURN 3
		IF EQUIP:(ARG:1):頭 == 3203 && EQUIP:(ARG:1):足 == 4601
			LOCAL = BASE:(ARG:1):LV / 4
			LOCAL += ABL:(ARG:1):Ｃ感覚 + ABL:(ARG:1):Ｖ感覚 + ABL:(ARG:1):Ａ感覚 + ABL:(ARG:1):Ｂ感覚
			SIF LOCAL < 3
				LOCAL = 3
			RETURN LOCAL
		ELSE
			RETURN 3
		ENDIF
	CASE 5
		SIF ARG:1 == -1
			RETURN 2
		IF EQUIP:(ARG:1):頭 == 3203 && EQUIP:(ARG:1):足 == 4601
			LOCAL = BASE:(ARG:1):LV / 4 + 2
			RETURN LOCAL
		ELSE
			RETURN 3
		ENDIF
ENDSELECT
RETURN 0

