@戦闘能力修正_3610,ARG,ARG:1 = -1

SELECTCASE ARG
	CASE 2
		SIF ARG:1 == -1
			RETURN 10
		IF CFLAG:(ARG:1):1010 > 224
			LOCAL = BASE:(ARG:1):LV * 3 / 5 + 25
		ELSEIF CFLAG:(ARG:1):1010 > 192
			LOCAL = BASE:(ARG:1):LV / 2 + 25
		ELSEIF CFLAG:(ARG:1):1010 > 160
			LOCAL = BASE:(ARG:1):LV / 3 + 25
		ELSE
			LOCAL = BASE:(ARG:1):LV / 4 + 25
		ENDIF
		RETURN LOCAL
	CASE 3
		SIF ARG:1 == -1
			RETURN 30
		IF CFLAG:(ARG:1):1010 > 224
			LOCAL = BASE:(ARG:1):LV * 2 / 3 + 15
		ELSEIF CFLAG:(ARG:1):1010 > 192
			LOCAL = BASE:(ARG:1):LV * 3 / 5 + 15
		ELSEIF CFLAG:(ARG:1):1010 > 160
			LOCAL = BASE:(ARG:1):LV / 2 + 15
		ELSE
			LOCAL = BASE:(ARG:1):LV / 3 + 15
		ENDIF
		RETURN LOCAL
	CASE 4
		SIF ARG:1 == -1
			RETURN 5
		IF CFLAG:(ARG:1):1010 > 224
			LOCAL = BASE:(ARG:1):LV / 2 
		ELSEIF CFLAG:(ARG:1):1010 > 192
			LOCAL = BASE:(ARG:1):LV / 3
		ELSEIF CFLAG:(ARG:1):1010 > 160
			LOCAL = BASE:(ARG:1):LV / 4
		ELSE
			LOCAL = BASE:(ARG:1):LV / 5
		ENDIF
		RETURN LOCAL
	CASE 5
		SIF ARG:1 == -1
			RETURN 5
		IF CFLAG:(ARG:1):1010 > 224
			LOCAL = BASE:(ARG:1):LV * 3 / 4 
		ELSEIF CFLAG:(ARG:1):1010 > 192
			LOCAL = BASE:(ARG:1):LV / 2
		ELSEIF CFLAG:(ARG:1):1010 > 160
			LOCAL = BASE:(ARG:1):LV / 3
		ELSE
			LOCAL = BASE:(ARG:1):LV / 4
		ENDIF
		RETURN LOCAL
ENDSELECT
RETURN 0

