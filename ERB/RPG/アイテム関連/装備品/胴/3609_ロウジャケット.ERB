@戦闘能力修正_3609,ARG,ARG:1 = -1

SELECTCASE ARG
	CASE 2
		SIF ARG:1 == -1
			RETURN 30
		IF CFLAG:(ARG:1):1010 > 224
			LOCAL = BASE:(ARG:1):LV * 2 / 3 + 30
		ELSEIF CFLAG:(ARG:1):1010 > 192
			LOCAL = BASE:(ARG:1):LV * 3 / 5 + 30
		ELSEIF CFLAG:(ARG:1):1010 > 160
			LOCAL = BASE:(ARG:1):LV / 2 + 30
		ELSE
			LOCAL = BASE:(ARG:1):LV / 3 + 30
		ENDIF
		RETURN LOCAL
	CASE 3
		SIF ARG:1 == -1
			RETURN 10
		IF CFLAG:(ARG:1):1010 > 224
			LOCAL = BASE:(ARG:1):LV * 3 / 5 + 10
		ELSEIF CFLAG:(ARG:1):1010 > 192
			LOCAL = BASE:(ARG:1):LV / 2 + 10
		ELSEIF CFLAG:(ARG:1):1010 > 160
			LOCAL = BASE:(ARG:1):LV / 3 + 10
		ELSE
			LOCAL = BASE:(ARG:1):LV / 4 + 10
		ENDIF
		RETURN LOCAL
	CASE 4
		SIF ARG:1 == -1
			RETURN 5
		IF CFLAG:(ARG:1):1010 > 224
			LOCAL = BASE:(ARG:1):LV * 3 / 4 
		ELSEIF CFLAG:(ARG:1):1010 > 192
			LOCAL = BASE:(ARG:1):LV / 2
		ELSEIF CFLAG:(ARG:1):1010 > 160
			LOCAL = BASE:(ARG:1):LV / 3
		ELSE
			LOCAL = BASE:(ARG:1):LV / 4
		ENDIF
		RETURN LOCAL
	CASE 5
		SIF ARG:1 == -1
			RETURN 5
		IF CFLAG:(ARG:1):1010 > 224
			LOCAL = BASE:(ARG:1):LV / 2 
		ELSEIF CFLAG:(ARG:1):1010 > 192
			LOCAL = BASE:(ARG:1):LV / 3
		ELSEIF CFLAG:(ARG:1):1010 > 160
			LOCAL = BASE:(ARG:1):LV / 4
		ELSE
			LOCAL = BASE:(ARG:1):LV / 5
		ENDIF
		RETURN LOCAL
ENDSELECT
RETURN 0

