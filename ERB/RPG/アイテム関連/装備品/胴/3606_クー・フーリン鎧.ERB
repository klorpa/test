			RETURN 70
		IF EQUIP:(ARG:1):頭 == 3206
			LOCAL = BASE:(ARG:1):LV * 3 / 5 +70
			RETURN LOCAL
		ELSE
			RETURN 70
		ENDIF
	CASE 3
		SIF ARG:1 == -1
			RETURN 5
		IF EQUIP:(ARG:1):頭 == 3206
			LOCAL = BASE:(ARG:1):LV / 4 + 5
			RETURN LOCAL
		ELSE
			RETURN 5
		ENDIF
ENDSELECT
