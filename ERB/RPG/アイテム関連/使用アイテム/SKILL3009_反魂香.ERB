	PRINTFORMW %CALLNAME:(ARG:1)% has been revived.
	CFLAG:(ARG:1):ステート = 0
	CFLAG:(ARG:1):ステート経過ターン = 0
	CALL VAR_HP,(ARG:1),MAXBASE:(ARG:1):ＨＰ
ENDIF

