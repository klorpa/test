;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_3009,ARG,ARG:1
SIF CFLAG:ARG:PTフラグ > 0
ITEM:1009 -= 1
CALL SKILL_CURE_STATE_3009,CFLAG:(ARG:1):ステート
	IF RESULT == 1
	PRINTFORMW %CALLNAME:(ARG:1)% has been revived.
	CFLAG:(ARG:1):ステート = 0
	CFLAG:(ARG:1):ステート経過ターン = 0
	CALL VAR_HP,(ARG:1),MAXBASE:(ARG:1):ＨＰ
ENDIF

