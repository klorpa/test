;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_3027,ARG,ARG:1
SIF CFLAG:ARG:PTフラグ > 0
ITEM:1027 -= 1

IF ARG:1 == 19
	LOCAL:7 = 1
	LOCAL:8 = 7
ELSE
	LOCAL:7 = 7
	LOCAL:8 = 17
ENDIF

FOR LOCAL:9,LOCAL:7,LOCAL:8
	LOCALS = ポジション{LOCAL:9}
	SIF FLAG:LOCALS < 0
		CONTINUE
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):ステート) == "DYING"
		CONTINUE
	PRINTFORM 　　TARGET:[{LOCAL:9,2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　
	;回復量
	LOCAL = MAXBASE:(FLAG:LOCALS):ＭＰ
	PRINTFORMW MP{LOCAL} recovered
	CALL VAR_MP,FLAG:LOCALS,LOCAL,3

NEXT

