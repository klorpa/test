@SKILL_SPEED_3017, ARG = -1
RETURN 5

;　口上の表示とそのタイプ
@SKILL_MESSAGE_3017,ARG

;戦闘時以外に使用できるか
@SKILL_ACTIONABLE_FIELD_3017
RETURN 1

;スキル変化？用ランク
@SKILL_RANK_3017
RETURN 0
;変化不可

;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_3017,ARG,ARG:1
SIF CFLAG:ARG:PTフラグ > 0
ITEM:1017 -= 1
LOCAL = POS(ARG:1)
CALL SKILL_CURE_STATE_3017,CFLAG:LOCAL:ステート
IF RESULT == 1
	PRINTFORMW 　　TARGET:[{ARG:1,2}] %CALLNAME:(LOCAL),20,LEFT%　>>>>>> Poison has been cured
	CFLAG:LOCAL:ステート = 0
	CFLAG:LOCAL:ステート経過ターン = 0
ENDIF

;====================================================
;実行内容ここまで
;====================================================


;====================================================
;戦闘中以外での実行
;====================================================
@ACTION_FIELD_3017,ARG,ARG:1
ITEM:1017 -= 1
PRINTFORML Used a %ITEMNAME_E(1017)%.

LOCAL = POS(ARG:1)
CALL SKILL_CURE_STATE_3017,CFLAG:LOCAL:ステート
IF RESULT == 1
	PRINTFORMW 　　TARGET:[{ARG:1,2}] %CALLNAME:(LOCAL),20,LEFT%　>>>>>> Poison has been cured
	CFLAG:LOCAL:ステート = 0
	CFLAG:LOCAL:ステート経過ターン = 0
ENDIF


