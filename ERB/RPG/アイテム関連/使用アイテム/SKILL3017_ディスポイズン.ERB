@SKILL_EXPLAIN_3017
PRINTL Removes Poison from an ally.
;味方一人のPOISONを回復する。

@最大所持数_3017
RETURN 10

@道具購入条件_3017
RETURN 1

;使用条件
@SKILL_SPECIAL_ACTIONABLE_3017,ARG
SIF CFLAG:ARG:PTフラグ == 0
	RETURN 1
SIF ITEM:1017 < 1 || CFLAG:ARG:アイテム使用能力 < 1
	RETURN 0
RETURN 1
;アイテムの個数チェック


;ターゲット条件
@SKILL_SPECIAL_TARGET_3017,ARG
CALLFORM SKILL_CURE_STATE_3017,(CFLAG:ARG:ステート)
RETURN RESULT

;控えに使えるか
@SKILL_T_RESERVE_3017
RETURN 0

;何のバッドステータスを治せるか
@SKILL_CURE_STATE_3017,ARG
SELECTCASE GET_STATE(ARG)
	CASE "POISON"
		RETURN 1
	CASEELSE
		RETURN 0
ENDSELECT

