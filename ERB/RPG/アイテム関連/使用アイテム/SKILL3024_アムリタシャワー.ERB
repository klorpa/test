;スキル及び行動の実行
;====================================================
@ACTION_3024,ARG,ARG:1
SIF CFLAG:ARG:PTフラグ > 0
ITEM:1024 -= 1
IF ARG:1 == 19
	LOCAL:7 = 1
	LOCAL:8 = 7
ELSE
	LOCAL:7 = 7
	LOCAL:8 = 17
ENDIF
FOR LOCAL:9,LOCAL:7,LOCAL:8
	LOCALS = ポジション{LOCAL:9}
	SIF FLAG:LOCALS < 0
		CONTINUE
	LOCAL = FLAG:LOCALS
	CALL SKILL_CURE_STATE_3024,CFLAG:LOCAL:ステート
	IF RESULT == 1
		PRINTFORML 　　TARGET:[{LOCAL:9,2}] %CALLNAME:(LOCAL),20,LEFT%　>>>>>>　Status recovered!
		CFLAG:LOCAL:ステート = 0
		CFLAG:LOCAL:ステート経過ターン = 0
	ENDIF
NEXT

