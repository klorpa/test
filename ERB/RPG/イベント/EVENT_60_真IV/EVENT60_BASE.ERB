;====================
@PLAYABLE_EVENT_60
#DIM DYNAMIC L_FLAG
L_FLAG = FLAG:真IV進行度 / 100
IF L_FLAG == 3
	L_FLAG = FLAG:真IV進行度 / 10
	IF L_FLAG == 31
;阿修羅会
		RESULTS = 阿修羅会本部にて
		RETURN 1
	ELSEIF L_FLAG == 39
;サムライ
		RESULTS = 東のミカド国
		RETURN 1
	ENDIF
ELSEIF L_FLAG == 5
		L_FLAG = FLAG:真IV進行度 / 10
		IF L_FLAG == 51
;阿修羅会 ヒルズ後
			RESULTS = 六本木ヒルズ(阿修羅会)
			RETURN 1
		ELSEIF L_FLAG == 59 && イベントフラグ:60:1 == 0
;サムライ
			RESULTS = 東のミカド国：シンジュク村
			RETURN 1
		ENDIF
ELSEIF L_FLAG == 7
		L_FLAG = FLAG:真IV進行度 % 10
		IF L_FLAG == 1
;阿修羅会 ヒルズ後
			RESULTS = ゲート閉鎖
			RETURN 1
		ELSEIF L_FLAG == 9
;サムライ
			RESULTS = 東のミカド国：決断
			RETURN 1
		ENDIF
ENDIF

RETURN 0

;====================
;内容
;====================
@SHOPCOM_EVENT_60
#DIM DYNAMIC L_FLAG

	L_FLAG = FLAG:真IV進行度 / 10
	IF L_FLAG == 31
;阿修羅会
		CALL EVENT_60_1
	ELSEIF L_FLAG == 39
;サムライ
		CALL EVENT_60_2
	ELSEIF L_FLAG == 51
;阿修羅会 ヒルズ後
		CALL EVENT_60_3
	ELSEIF L_FLAG == 59
;サムライ
		CALL EVENT_60_4
	ELSEIF L_FLAG == 71
;阿修羅会 ヒルズ後
		CALL EVENT_60_5
	ELSEIF L_FLAG == 79
;サムライ
		CALL EVENT_60_6
	ENDIF
	RETURN 0

