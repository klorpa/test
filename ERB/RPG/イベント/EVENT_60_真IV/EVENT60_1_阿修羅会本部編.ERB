				L_FLAG = 0
			ELSE
				L_FLAG = 1
			ENDIF
		ELSE
			L_FLAG = 0
		ENDIF
	ENDIF
	IF L_FLAG == 0
		CALL EVENT_60_VISIT_TAYAMA
	ELSE
		CALL EVENT_60_VISIT_KAGA
	ENDIF
	
