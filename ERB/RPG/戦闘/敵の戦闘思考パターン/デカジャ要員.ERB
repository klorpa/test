@SET_ACTION_デカジャ要員,ARG

LOCAL:3 = 0
FOR LOCAL, 1, 7
	SIF POS(LOCAL) < 0
		CONTINUE
	SIF CFLAG:POS(LOCAL):攻撃強化 > 0
		LOCAL:3 += CFLAG:POS(LOCAL):攻撃強化
	SIF CFLAG:POS(LOCAL):防御強化 > 0
		LOCAL:3 += CFLAG:POS(LOCAL):防御強化
	SIF CFLAG:POS(LOCAL):魔法威力強化 > 0
		LOCAL:3 += CFLAG:POS(LOCAL):魔法威力強化
	SIF CFLAG:POS(LOCAL):魔法効果強化 > 0
		LOCAL:3 += CFLAG:POS(LOCAL):魔法効果強化
	SIF CFLAG:POS(LOCAL):回避強化 + CFLAG:POS(LOCAL):命中強化 > 0
		LOCAL:3 += (CFLAG:POS(LOCAL):回避強化 + CFLAG:POS(LOCAL):命中強化) / 2
NEXT

IF 50 < LOCAL:3
	CFLAG:ARG:入力行動 = 509
	CALL RANDOM_TARGET,ARG,509
	RETURN 1
ENDIF

CSTR:ARG:思考パターン = 1
		CALL ランダム行動 , ARG
CSTR:ARG:思考パターン = デカジャ要員
