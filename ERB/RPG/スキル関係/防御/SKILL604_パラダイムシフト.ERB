;実行


IF FLAG:ARG > -1
	FOR LOCAL,40,57
		BASE:ARG:LOCAL = (RAND:6-2)*100
		SIF BASE:ARG:LOCAL == -200
			BASE:ARG:LOCAL = 999
		SIF BASE:ARG:LOCAL == 200
			BASE:ARG:LOCAL = 150
		SIF BASE:ARG:LOCAL == 300
			BASE:ARG:LOCAL = 200
	NEXT
	PRINTFORMW %CALLNAME:ARG%'s elemental affinities changed！
ENDIF






