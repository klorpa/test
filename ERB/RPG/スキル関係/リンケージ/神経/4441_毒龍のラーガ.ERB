;スキル及び行動の実行
;====================================================
@ACTION_4441,ARG,ARG:1
CALL FIELD_BADSTATE,ARG,ARG:1,4441
IF CFLAG:(ARG):PTフラグ == 0
	LOCAL:1 = 1
	LOCAL:2 = 7
	
	FOR LOCAL,LOCAL:1,LOCAL:2
		SIF POS(LOCAL) < 0
			CONTINUE
		CFLAG:POS(LOCAL):攻撃強化 = MAX(-16, CFLAG:POS(LOCAL):攻撃強化 - 12)
		CFLAG:POS(LOCAL):魔法威力強化 = MAX(-16, CFLAG:POS(LOCAL):魔法威力強化 - 12)
	NEXT
	PRINTFORMW \@ CFLAG:ARG:PTフラグ == 2 ? foes # allies \@ Attack and magic power went down!
ELSE
	LOCAL:1 = 7
	LOCAL:2 = 17
	
	FOR LOCAL,LOCAL:1,LOCAL:2
		SIF POS(LOCAL) < 0
			CONTINUE
		IF ABL:ARG:歌唱技能 ==10
			CFLAG:POS(LOCAL):攻撃強化 = MAX(-16, CFLAG:POS(LOCAL):攻撃強化 - 12)
			CFLAG:POS(LOCAL):魔法威力強化 = MAX(-16, CFLAG:POS(LOCAL):魔法威力強化 - 12)
		ELSEIF ABL:ARG:歌唱技能 > 4
			CFLAG:POS(LOCAL):攻撃強化 = MAX(-16, CFLAG:POS(LOCAL):攻撃強化 - 8)
			CFLAG:POS(LOCAL):魔法威力強化 = MAX(-16, CFLAG:POS(LOCAL):魔法威力強化 - 8)
		ELSE
			CFLAG:POS(LOCAL):攻撃強化 = MAX(-16, CFLAG:POS(LOCAL):攻撃強化 - 4)
			CFLAG:POS(LOCAL):魔法威力強化 = MAX(-16, CFLAG:POS(LOCAL):魔法威力強化 - 4)
		ENDIF
	NEXT

	PRINTFORMW \@ CFLAG:ARG:PTフラグ == 2 ? foes # allies \@ Attack and magic power went down!
ENDIF






