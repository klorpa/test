@ACTION_1016,ARG,ARG:1
LOCAL = POS(ARG:1)
A = 0
B = 0
C = 0
D = 0

CALL 相性素質チェック, ARG, GET_TYPE_NUM("衝撃"), 1, 1
IF RESULT == 1 && CFLAG:ARG:気合フラグ > 0
	IF (MAXBASE:LOCAL:衝撃 < 100 || MAXBASE:LOCAL:衝撃 == 999) && CFLAG:LOCAL:衝撃ガードキル < 1
		CFLAG:LOCAL:衝撃ガードキル = 1
		A = 1
	ENDIF
	IF CFLAG:LOCAL:魔法反射フラグ == 1
		B = CFLAG:LOCAL:魔法反射フラグ
		CFLAG:LOCAL:魔法反射フラグ = 0
	ENDIF
	IF CFLAG:LOCAL:無効フラグ > 0
		C = CFLAG:LOCAL:無効フラグ
		CFLAG:LOCAL:無効フラグ = 0
	ENDIF
	IF CFLAG:LOCAL:氷結無効化回数 > 0
		D = CFLAG:LOCAL:氷結無効化回数
		CFLAG:LOCAL:氷結無効化回数 = 0
	ENDIF
	IF A + B + C + D > 0
		PRINTFORML 　　TARGET:[{ARG:1,2}] %CALLNAME:LOCAL,20,LEFT%　>>>>>>　Resistance pierced!
	ENDIF
ENDIF
CFLAG:ARG:気合フラグ = 0
CALL ATTACK_SINGLE,ARG,LOCAL,1016

SIF A == 1
	CFLAG:LOCAL:衝撃ガードキル = 0
SIF B > 0
	CFLAG:LOCAL:魔法反射フラグ = B
SIF C > 0
	CFLAG:LOCAL:無効フラグ = C
SIF D > 0
	CFLAG:LOCAL:衝撃無効化回数 = D

