@SKILL_HITRATE_2889, ARG
RETURN 100

;　威力
@SKILL_POWER_2889, ARG
SIF ARG == -1
	RETURN 1
SELECTCASE FLAG:拡散フラグ
	CASE IS > 75
		RETURN 1+220*(100-FLAG:拡散フラグ)/100
	CASE IS > 50
		RETURN 1+345*(100-FLAG:拡散フラグ)/100
	CASE IS > 5
		RETURN 1+490*(100-FLAG:拡散フラグ)/100
	CASEELSE
		RETURN 1+640*(100-FLAG:拡散フラグ)/100
ENDSELECT

