@ACTION_432,ARG,ARG:1
;コスト支払い
;CALL PAY_COST,ARG,432
IF ARG:1 == 19
	LOCAL:7 = 1
	LOCAL:8 = 7
ELSE
	LOCAL:7 = 7
	LOCAL:8 = 17
ENDIF
FOR LOCAL:9,LOCAL:7,LOCAL:8
	LOCALS = ポジション{LOCAL:9}
	SIF FLAG:LOCALS < 0
		CONTINUE
	LOCAL = FLAG:LOCALS
	CALL SKILL_CURE_STATE_432,CFLAG:LOCAL:ステート
	IF RESULT == 1
		SIF GET_STATE(CFLAG:LOCAL:ステート) == "PANIC" || GET_STATE(CFLAG:LOCAL:ステート) == "CHARM"
			CFLAG:LOCAL:混乱魅了リカバー = 1
	PRINTFORML 　　TARGET:[{ARG:1,2}] %CALLNAME:(LOCAL),20,LEFT%　>>>>>>　Status recovered
		CFLAG:LOCAL:ステート = 0
		CFLAG:LOCAL:ステート経過ターン = 0
	ENDIF
NEXT

