@ACTION_1329,ARG,ARG:1
IF ARG:1 == 22
	LOCAL:1 = 7
	LOCAL:2 = 17
ELSE
	LOCAL:1 = 1
	LOCAL:2 = 7
ENDIF

FOR LOCAL,LOCAL:1,LOCAL:2
	LOCALS = ポジション{LOCAL}
	SIF FLAG:LOCALS < 0 || FLAG:LOCALS == ARG
		CONTINUE
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):ステート) == "DYING"
		CONTINUE
	PRINTFORM 　　TARGET:[{CPOS(FLAG:LOCALS),2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　
	CALLFORM JUDG_HIT_1,ARG,FLAG:LOCALS,50
	IF RESULT == 1 && CFLAG:(FLAG:LOCALS):ボスフラグ == 0
		;命中した
			PRINTFORMW {BASE:(FLAG:LOCALS):ＨＰ/2} DAMAGE
			CALL VAR_HP,FLAG:LOCALS,-(BASE:(FLAG:LOCALS):ＨＰ/2),0
	ELSE
		;外した
		PRINTW MISS
	ENDIF
NEXT
