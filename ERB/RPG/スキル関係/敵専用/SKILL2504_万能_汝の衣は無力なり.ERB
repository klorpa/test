@SKILL_2504_RESISTBREAK
#DIM CHARA
FOR LOCAL:1,1,7
	CHARA = POS(LOCAL:1)
	SIF CHARA < 0
		CONTINUE
	IF TALENT:CHARA:デビルシフター
	ELSEIF TALENT:CHARA:ペルソナ使い
	ELSEIF TALENT:CHARA:喰奴
	ELSEIF ABL:CHARA:種族 == 0
		;デバッグ用アイテム持ちは飛ばす
		SIF EQUIP:CHARA:アクセサリ == 5499
			CONTINUE
		;装備による相性変化を無効化
		FOR LOCAL,GETNUM(BASE,"剣撃"),GETNUM(BASE,"サイコ")+1
			MAXBASE:CHARA:LOCAL = BASE:CHARA:LOCAL
		NEXT
	ELSE
		;相性変化を無効化
		FOR LOCAL,GETNUM(BASE,"剣撃"),GETNUM(BASE,"サイコ")+1
			MAXBASE:CHARA:LOCAL = BASE:CHARA:LOCAL
		NEXT
	ENDIF
NEXT

@SKILL_2504_INSTALLSOFT(ARGS="RESET")
#DIM SOFT,60
#DIM L_COUNT
SIF ARGS == "SET"
	VARSET SOFT
FOR L_COUNT,150,210
	SWAP SOFT:(L_COUNT-150),EQUIP:MASTER:L_COUNT
NEXT

