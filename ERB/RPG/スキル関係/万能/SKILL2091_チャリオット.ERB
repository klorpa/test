;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_2091,ARG,ARG:1
#LOCALSIZE 2
CALL ATTACK_FIELD,ARG,ARG:1,2091

IF CFLAG:(ARG):PTフラグ == 0
	FOR LOCAL,1,7
		LOCALS = ポジション{LOCAL}
		SIF FLAG:LOCALS < 0
			CONTINUE
		CFLAG:(FLAG:LOCALS):命中強化 -= 4
		SIF CFLAG:(FLAG:LOCALS):命中強化 < -16
			CFLAG:(FLAG:LOCALS):命中強化 = -16
		CFLAG:(FLAG:LOCALS):回避強化 -= 4
		SIF CFLAG:(FLAG:LOCALS):回避強化 < -16
			CFLAG:(FLAG:LOCALS):回避強化 = -16
	PRINTFORMW %CALLNAME:(FLAG:LOCALS)%の回避力が下がった！
	NEXT
ELSE
	FOR LOCAL,7,17
		LOCALS = ポジション{LOCAL}
		SIF FLAG:LOCALS < 0
			CONTINUE
		CFLAG:(FLAG:LOCALS):命中強化 -= 4
		SIF CFLAG:(FLAG:LOCALS):命中強化 < -16
			CFLAG:(FLAG:LOCALS):命中強化 = -16
		CFLAG:(FLAG:LOCALS):回避強化 -= 4
		SIF CFLAG:(FLAG:LOCALS):回避強化 < -16
			CFLAG:(FLAG:LOCALS):回避強化 = -16
		PRINTW 敵の命中・回避を下げた！
	NEXT
ENDIF




