;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_2082,ARG,ARG:1
IF CFLAG:(ARG):PTフラグ == 0
	LOCAL:7 = 1
	LOCAL:8 = 7
ELSE
	LOCAL:7 = 7
	LOCAL:8 = 17
ENDIF

FOR LOCAL, LOCAL:7, LOCAL:8
	LOCALS = ポジション{LOCAL}
	SIF FLAG:LOCALS < 0 || FLAG:LOCALS == ARG || CFLAG:(FLAG:LOCALS):ボスフラグ
		CONTINUE
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):ステート) == "DYING"
		CONTINUE
	CALLFORM JUDG_HIT_2,ARG,FLAG:LOCALS,100
	IF RESULT == 1
		;命中した
		IF RAND:10 < 1
			;８３％（６分の５）ダメ、流石に90%ダメは酷いよね
			PRINTFORM 　　TARGET:[{CPOS(FLAG:LOCALS),2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　
			PRINTFORML {(BASE:(FLAG:LOCALS):ＨＰ)*5 / 6} DAMAGE
			CALL VAR_HP, FLAG:LOCALS, -((BASE:(FLAG:LOCALS):ＨＰ) / 10),0
		ELSEIF RAND:9 < 4
			;７５％ダメ
			PRINTFORM 　　TARGET:[{CPOS(FLAG:LOCALS),2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　
			PRINTFORML {(BASE:(FLAG:LOCALS):ＨＰ)*3 / 4} DAMAGE
			CALL VAR_HP, FLAG:LOCALS, -((BASE:(FLAG:LOCALS):ＨＰ)*3 / 4),0
		ELSEIF RAND:5 < 2
			;５０％ダメ
			PRINTFORM 　　TARGET:[{CPOS(FLAG:LOCALS),2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　
			PRINTFORML {(BASE:(FLAG:LOCALS):ＨＰ) / 2} DAMAGE
			CALL VAR_HP, FLAG:LOCALS, -((BASE:(FLAG:LOCALS):ＨＰ) / 2),0
		ELSE
			CALL SINGLE_BADSTATE,ARG,FLAG:LOCALS,2082
		ENDIF
	ELSE
		;外したらデカジャ効果
		PRINTFORML 　　TARGET:[{CPOS(FLAG:LOCALS),2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　Miss
		FOR LOCAL:1,0,6
			CFLAG:(FLAG:LOCALS):(GET_BATTLESTATUS(LOCAL:1) + "強化") = MIN(0, CFLAG:(FLAG:LOCALS):(GET_BATTLESTATUS(LOCAL:1) + "強化"))
		NEXT
		PRINTFORML Reinforced stats returned！
	ENDIF
NEXT



