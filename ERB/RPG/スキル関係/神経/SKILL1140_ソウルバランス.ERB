;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_1140,ARG,ARG:1

IF CFLAG:(ARG):PTフラグ == 0
	LOCAL:7 = 1
	LOCAL:8 = 7
ELSE
	LOCAL:7 = 7
	LOCAL:8 = 17
ENDIF

FOR LOCAL, LOCAL:7, LOCAL:8
	LOCALS = ポジション{LOCAL}
	SIF FLAG:LOCALS < 0 || FLAG:LOCALS == ARG || CFLAG:(FLAG:LOCALS):ボスフラグ
		CONTINUE
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):ステート) == "DYING"
		CONTINUE
	PRINTFORM 　　TARGET:[{CPOS(FLAG:LOCALS),2}] %CALLNAME:(FLAG:LOCALS),20,LEFT%　>>>>>>　
	CALLFORM JUDG_HIT_2,ARG,FLAG:LOCALS,100
	IF RESULT == 1 && MAXBASE:(FLAG:LOCALS):神経 > 0 && MAXBASE:(FLAG:LOCALS):神経 < 999
		;命中した
		PRINTFORMW {(BASE:(FLAG:LOCALS):ＨＰ) / 2} DAMAGE
		CALL VAR_HP, FLAG:LOCALS, -((BASE:(FLAG:LOCALS):ＨＰ) / 2),0
		CALL SINGLE_BADSTATE,ARG,FLAG:LOCALS,1140
	ELSE
		;外した
		PRINTW MISS
	ENDIF
NEXT



