;---------------------------------
;ウェイトスキルは専用コマンドから実行させ
;そこでほとんど処理するので、個別の設定はほぼなしで
;---------------------------------
;スキル名
@SKILL_NAME_834,ARG
RESULTS = Ice Reflect
;　命中
@SKILL_HITRATE_834, ARG
RETURN 0

;　威力
@SKILL_POWER_834, ARG
RETURN 0

;　最低攻撃回数
@SKILL_MINATTACKNUMBER_834,ARG
RETURN 0

;　最大攻撃回数
@SKILL_MAXATTACKNUMBER_834,ARG
RETURN 0

;　ＨＰ2を支払うかＭＰ3を支払うか
@SKILL_COSTTYPE_834, ARG
RETURN 1
;消費なし＝1

;　コストの量
;MAXMPの1%
@SKILL_COST_834,ARG
RETURN 2

;　相性
@SKILL_TYPE_834,ARG
RETURN 0

;　1EXTRAか2MAGICか
@SKILL_DECIDE_TYPE_834
RETURN 2
;どちらでもない

;　1物理ダメージで計算するか2魔法ダメージで計算するか
@SKILL_DAMAGETYPE_834
RETURN 1


;　対象が1敵か2味方か3場全体か4特殊か
@SKILL_TARGET_834
RETURN 4

;　射程
@SKILL_RANGE_834,ARG
RETURN 1

;　範囲　1単体　21列　3全体　4　敵味方全体
@SKILL_SPHERE_834,ARG
RETURN 4

;　 効果のタイプ　1攻撃、2回復、3状態変化、4特殊、5状態回復
@SKILL_EFECT_834
RETURN 4

;継承タイプ
@SKILL_SUCCESSION_TYPE_834
RETURN GET_SUCCESSION_NUM("氷結")
;継承不可

;速度補正
@SKILL_SPEED_834, ARG = -1
RETURN 0

;　口上の表示とそのタイプ
@SKILL_MESSAGE_834,ARG

;戦闘時以外に使用できるか
@SKILL_ACTIONABLE_FIELD_834
RETURN 0

;スキル変化？用ランク
@SKILL_RANK_834
RETURN 0
;変化不可

@ウェイトスキル_834
RETURN 2
;戦闘中に使用できるか
@SKILL_ACTIONABLE_BATTLE_834
RETURN 0
