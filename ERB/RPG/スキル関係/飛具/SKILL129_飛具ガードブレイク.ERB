;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_129,ARG,ARG:1

IF ARG:1 == 19
	LOCAL:2 = 1
	LOCAL:3 = 7
ELSE
	LOCAL:2 = 7
	LOCAL:3 = 17
ENDIF

FOR LOCAL, LOCAL:2, LOCAL:3
	SIF POS(LOCAL) == -1 || CFLAG:POS(LOCAL):ステート == GET_STATE_NUM("DYING")
		CONTINUE
	LOCAL:1 = 2
	SIF CFLAG:ARG:PTフラグ == 0
		LOCAL:1 = 4
	IF LOCAL:1 > CFLAG:POS(LOCAL):飛具無効化回数
		LOCAL:1 -= CFLAG:POS(LOCAL):飛具無効化回数
		CFLAG:POS(LOCAL):飛具無効化回数 = 0
		IF LOCAL:1 >= CFLAG:POS(LOCAL):飛具ガードキル
			CFLAG:POS(LOCAL):飛具ガードキル = LOCAL:1
			PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> Gun resistance negated for {LOCAL:1} turns!
		ENDIF
	ELSE
		CFLAG:POS(LOCAL):飛具無効化回数 -= LOCAL:1
		PRINTFORML [{LOCAL}]%CALLNAME:POS(LOCAL),20% >>>>> Gun resistance reduced!
	ENDIF
NEXT
WAIT


