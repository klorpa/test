;====================================================
;スキル及び行動の実行
;====================================================
@ACTION_128,ARG,ARG:1
LOCAL = POS(ARG:1)
LOCAL:1 = 3
SIF CFLAG:ARG:PTフラグ == 0
	LOCAL:1 = 5
IF LOCAL:1 > CFLAG:LOCAL:飛具無効化回数*2
	LOCAL:1 -= CFLAG:LOCAL:飛具無効化回数
	IF LOCAL:1 >= CFLAG:LOCAL:飛具ガードキル
		CFLAG:LOCAL:飛具ガードキル = LOCAL:1
		PRINTFORML [{ARG:1}]%CALLNAME:LOCAL,20% >>>>> Gun resistance negated for {LOCAL:1} turns!
	ENDIF
ELSE
	CFLAG:LOCAL:飛具無効化回数 -= LOCAL:1
	PRINTFORML [{ARG:1}]%CALLNAME:LOCAL,20% >>>>> Gun resistance reduced!
ENDIF




