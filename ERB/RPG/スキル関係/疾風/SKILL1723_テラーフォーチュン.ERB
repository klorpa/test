@ACTION_1723, ARG, ARG:1
IF CFLAG:ARG:ポジション < 7
	LOCAL:1 = 7
	LOCAL:2 = 17 
ELSE
	LOCAL:1 = 1
	LOCAL:2 = 7
ENDIF
FOR LOCAL, LOCAL:1, LOCAL:2
	LOCALS = ポジション{LOCAL}
	SIF FLAG:LOCALS < 0
		CONTINUE
	SIF GET_STATE(CFLAG:(FLAG:LOCALS):ステート) == "DYING"
		CONTINUE
	CFLAG:ARG:ターゲット = LOCAL
	CALL ATTACK_SINGLE, ARG, FLAG:LOCALS, 1723
NEXT
