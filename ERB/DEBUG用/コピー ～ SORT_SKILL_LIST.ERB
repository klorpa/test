;====================================
;登録済みの悪魔をリスト化するための関数です
;レベル順リストは基本的に特殊種族と人間を表示しません。
;雑魚悪魔等を選択したりする用です。
;====================================



@SHOPCOMABLE_189
[IF_DEBUG]
	RESULTS = スキル一覧2
	RETURN 1
[ENDIF]
IF FLAG:DEBUG
	RESULTS = スキル一覧2
	RETURN 1
ENDIF
RETURN -1

@SHOP_COM_189
PRINTL
CLEARLINE LINECOUNT
PRINTFORML ;-------------------------------
PRINTFORML ;%GAMEBASE_TITLE% {GAMEBASE_VERSION/1000},{GAMEBASE_VERSION % 1000}
GETTIME
PRINTFORML ;%RESULTS%
PRINTFORML ;-------------------------------
PRINTFORML ;-------------------------------
PRINTFORML ;この資料は資料フォルダ内にある
PRINTFORML ;SORT_SKILL_LIST.ERBを利用して作成されています
PRINTFORML ;何か追加する際はコピペするのではなく、
PRINTFORML ;SORT_SKILL_LIST.ERBを利用して出力してください
PRINTFORML ;-------------------------------
FOR LOCAL, 0 ,3000
	SIF LOCAL == 2303
		GOTO SUMMON
	TRYCCALLFORM SKILL_NAME_{LOCAL}
		$SUMMON
		IF LOCAL == 2303
			PRINTFORM 仲魔召喚,
		ELSE
			PRINTFORM %RESULTS%,
		ENDIF
		SELECTCASE LOCAL
			;罪味方の専用魔法シリーズはターゲットいねーと落ちるので
			CASE 1520, 1620, 1720 ,1923, 2025
				PRINTFORM 特殊,
			CASEELSE
				RESULT = -1
				TRYCALLFORM SKILL_TYPE_{LOCAL}
				IF RESULT == -1
					PRINTFORM 特殊,
				ELSE
					PRINTFORM %GET_TYPE_E(RESULT)%,
				ENDIF
		ENDSELECT
		TRYCALLFORM SKILL_RANK_{LOCAL}		
		PRINTFORM {RESULT},
		RESULT = 0
		TRYCALLFORM SKILL_HITRATE_{LOCAL}
		PRINTFORM {RESULT},
		RESULT = 0
		TRYCALLFORM SKILL_POWER_{LOCAL}
		PRINTFORM {RESULT},
		RESULT = 0
		TRYCALLFORM SKILL_COSTTYPE_{LOCAL}
		LOCAL:1 = RESULT
		RESULT = 0
		TRYCALLFORM SKILL_COST_{LOCAL}
		PRINTFORM \@ LOCAL:1 == 2 ? {RESULT,3} # {RESULT,3} \@,
		TRYCALLFORM SKILL_RANGE_{LOCAL}
		PRINTFORM {RESULT},
		RESULT = 0
		TRYCALLFORM SKILL_SPHERE_{LOCAL}
		SELECTCASE RESULT
			CASE 1
				PRINTFORM 単体,
			CASE 2
				PRINTFORM 列,
			CASE 3
				PRINTFORM 全体,
			CASE 4
				PRINTFORM 敵味方,
			CASEELSE
				PRINT なし,
		ENDSELECT
		PRINTL
	CATCH
	ENDCATCH
NEXT
WAIT
