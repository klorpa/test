@SHOP_COM_190
#DIM 合計 , 1
PRINTL
CLEARLINE LINECOUNT
FOR LOCAL , 1 , 6000
	合計 = 0
	IF EXISTCSV(LOCAL , 0) > 0
		FOR LOCAL:1 , 1 , 7
			合計 += CSVBASE(LOCAL , GETNUM(BASE , "LV") + LOCAL:1 , 0)
		NEXT
		SIF 合計 > 18 + CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0) * 3 /2
			PRINTFORML [{LOCAL,4}] %CSVNAME(LOCAL,0)% LV{CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0)} 合計 = {合計} 過　 + {合計 - (18 + CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0) * 3 /2)}
		SIF 合計 < 18 + CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0) * 3 /2
			PRINTFORML [{LOCAL,4}] %CSVNAME(LOCAL,0)% LV{CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0)} 合計 = {合計} 不足 - {(18 + CSVBASE(LOCAL , GETNUM(BASE , "LV"), 0) * 3 /2) - 合計}
	ENDIF
NEXT


