;====================================
;登録済みの悪魔をリスト化するための関数です
;レベル順リストは基本的に特殊種族と人間を表示しません。
;雑魚悪魔等を選択したりする用です。
;====================================



@SHOPCOMABLE_198
[IF_DEBUG]
	RESULTS = スキル一覧
	RETURN 1
[ENDIF]
IF FLAG:DEBUG
	RESULTS = スキル一覧
	RETURN 1
ENDIF
RETURN -1

@SHOP_COM_198
PRINTL
CLEARLINE 5000
PRINTFORML ;-------------------------------
PRINTFORML ;%GAMEBASE_TITLE% {GAMEBASE_VERSION/1000},{GAMEBASE_VERSION % 1000}
GETTIME
PRINTFORML ;%RESULTS%
PRINTFORML ;-------------------------------
PRINTFORML ;-------------------------------
PRINTFORML ;この資料は資料フォルダ内にある
PRINTFORML ;SORT_SKILL_LIST.ERBを利用して作成されています
PRINTFORML ;何か追加する際はコピペするのではなく、
PRINTFORML ;SORT_SKILL_LIST.ERBを利用して出力してください
PRINTFORML ;-------------------------------
FOR LOCAL, 0 ,3000
	SIF LOCAL == 2303
		GOTO SUMMON
	TRYCCALLFORM SKILL_NAME_{LOCAL}
		$SUMMON
		IF LOCAL == 2303
			PRINTFORML {LOCAL,4};仲魔召喚
		ELSE
			PRINTFORML {LOCAL,4};%RESULTS%
		ENDIF
		SELECTCASE LOCAL
			;罪味方の専用魔法シリーズはターゲットいねーと落ちるので
			CASE 1520, 1620, 1720 ,1923, 2025
				PRINTFORM 相性:特殊　
			CASEELSE
				RESULT = -1
				TRYCALLFORM SKILL_TYPE_{LOCAL}
				IF RESULT == -1
					PRINTFORM 相性:特殊　
				ELSE
					PRINTFORM 相性:%GET_TYPE_E(RESULT)%　
				ENDIF
		ENDSELECT
		TRYCALLFORM SKILL_DECIDE_TYPE_{LOCAL}
		PRINTFORM \@RESULT == 1 ? EXTRA # MAGIC\@　
		RESULT = 0
		TRYCALLFORM SKILL_RANK_{LOCAL}		
		PRINTFORM RANK:{RESULT}　
		RESULT = 0
		TRYCALLFORM SKILL_COST_{LOCAL}
		PRINTFORM 消費MP:{RESULT}　
	SELECTCASE LOCAL
		CASE 0 TO 2300
		TRYCALLFORM SKILL_HITRATE_{LOCAL}
		PRINTFORM Hit:{RESULT}　
		RESULT = 0
		TRYCALLFORM SKILL_POWER_{LOCAL}
		PRINTFORM 威力:{RESULT}　
		RESULT = 0
	SELECTCASE LOCAL
		CASE 229 , 230
			PRINTFORML 攻撃回数:2-7　
		CASEELSE
			TRYCALLFORM SKILL_MAXATTACKNUMBER_{LOCAL}
			PRINTFORM 最大攻撃回数:{RESULT}　
			RESULT = 0
			TRYCALLFORM SKILL_MINATTACKNUMBER_{LOCAL}
			PRINTFORM 分割ＨＩＴ数:{RESULT}
			RESULT = 0
			TRYCALLFORM SKILL_MAXATTACKNUMBER_{LOCAL}
			PRINTFORML -{RESULT}　
			RESULT = 0
		ENDSELECT
		TRYCALLFORM SKILL_RANGE_{LOCAL}
		PRINT 射程:
		SELECTCASE RESULT
			CASE 1
				PRINTFORM Ｓ　
			CASE 2
				PRINTFORM Ｍ　
			CASE 3
				PRINTFORM Ｌ　
			CASE 4
				PRINTFORM ＬＬ　
		ENDSELECT
		TRYCALLFORM SKILL_SPHERE_{LOCAL}
		PRINT 範囲:
		SELECTCASE RESULT
			CASE 1
				PRINTFORM 単体　
			CASE 2
				PRINTFORM 列　　
			CASE 3
				PRINTFORM 全体　
			CASE 4
				PRINTFORM 敵味方
			CASEELSE
				PRINT なし　　
		ENDSELECT
		TRYCALLFORM SKILL_ADDTIONAL_STATE_{LOCAL} 
		SIF RESULT == 0
			PRINTFORM 追加効果 [ - ]
		IF RESULT > 0
			PRINTFORM 追加効果 [%GET_STATE(RESULT)%]　
		TRYCALLFORM SKILL_ADDTIONAL_BASE_RATE_{LOCAL}
		PRINTFORM 付与確率 {RESULT}　
		ENDIF
		TRYCALLFORM SKILL_SPEED_{LOCAL}
		PRINTFORM 速度補正 {RESULT}　
		TRYCALLFORM SKILL_ACTIONABLE_FIELD_{LOCAL}
		PRINTFORM 戦闘外使用 \@RESULT == 0 ? × # ○\@　
		RESULT = 0

		ENDSELECT

		TRYCALLFORM SKILL_EFECT_{LOCAL}
		PRINT 種別:
		SELECTCASE RESULT
			CASE 1
				PRINTFORML Attack　　　
			CASE 2
				PRINTFORML 回復　　　
			CASE 3
				PRINTFORML 状態変化　
			CASE 4
				PRINTFORML 特殊　　　
			CASE 5
				PRINTFORML 状態回復　
			CASEELSE
				PRINTFORML その他　　
		ENDSELECT
		TRYCALLFORM SKILL_EXPLAIN_{LOCAL}
		PRINTL 
	CATCH
	ENDCATCH
NEXT
WAIT
