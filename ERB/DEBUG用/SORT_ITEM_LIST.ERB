@SHOP_COM_197
PRINTL
CLEARLINE 5000
PRINTFORML ;-------------------------------
PRINTFORML ;%GAMEBASE_TITLE% {GAMEBASE_VERSION/1000},{GAMEBASE_VERSION % 1000}
GETTIME
PRINTFORML ;%RESULTS%
PRINTFORML ;-------------------------------
PRINTFORML ;-------------------------------
PRINTFORML ;この資料は資料フォルダ内にある
PRINTFORML ;SORT_ITEM_LIST.ERBを利用して作成されています
PRINTFORML ;何か追加する際はコピペするのではなく、
PRINTFORML ;SORT_ITEM_LIST.ERBを利用して出力してください
PRINTFORML ;-------------------------------
FOR LOCAL, 1000 ,9000
	SELECTCASE LOCAL
		CASE 2450 TO 2499 , 5500 TO 8000 , 1241 TO 1343
			CONTINUE
	ENDSELECT
	SIF ITEMNAME:LOCAL == ""
		CONTINUE
	PRINTFORM {LOCAL};%ITEMNAME_E(LOCAL)%
	IF LOCAL < 2000
		PRINTFORML (使用アイテム)
	ELSEIF LOCAL < 2500
		PRINTFORML (Sword)
	ELSEIF LOCAL < 3000
		PRINTFORML (Gun)
	ELSEIF LOCAL < 3500
		PRINTFORML (頭防具)
	ELSEIF LOCAL < 4000
		PRINTFORML (胴防具)
	ELSEIF LOCAL < 4500
		PRINTFORML (腕防具)
	ELSEIF LOCAL < 5000
		PRINTFORML (足防具)
	ELSEIF LOCAL < 5500
		PRINTFORML (Accessory)
	ELSEIF LOCAL < 9000
		PRINTFORML (プラグイン)
	ENDIF
	SELECTCASE LOCAL
	CASE 2000 TO 9000
	FOR LOCAL:3,1,FLAG:基本能力数
		TRYCALLFORM 基本能力修正_{LOCAL},LOCAL:3
		SELECTCASE LOCAL:3
			CASE 1
		PRINTFORM 力 
			CASE 2
		PRINTFORM 知力 
			CASE 3
		PRINTFORM 魔力 
			CASE 4
		PRINTFORM Stamina 
			CASE 5
		PRINTFORM 速さ 
			CASE 6
		PRINTFORM 運 
		ENDSELECT
		IF RESULT > 0
			SETCOLOR 51, 255, 255
		PRINTFORM +
		ELSEIF RESULT < 0
			SETCOLOR 204, 0, 0
		ENDIF
		PRINTFORM {RESULT}　
		RESETCOLOR
	NEXT
	PRINTFORML 
	ENDSELECT

	IF LOCAL < 2000
	SELECTCASE LOCAL
		CASE 1100 TO 1240
		TRYCALLFORM SKILL_HITRATE_{LOCAL+2000}
		PRINTFORM Hit:{RESULT,4}　
		RESULT = 0
		TRYCALLFORM SKILL_POWER_{LOCAL+2000}
		PRINTFORM 威力:{RESULT,4}　
		RESULT = 0
		TRYCALLFORM SKILL_COSTTYPE_{LOCAL+2000}
		LOCAL:1 = RESULT
		RESULT = 0
	ENDSELECT
		TRYCALLFORM SKILL_SPHERE_{LOCAL+2000}
		PRINT 範囲:
		SELECTCASE RESULT
			CASE 1
				PRINTFORM 単体　　
			CASE 2
				PRINTFORM 列　　　
			CASE 3
				PRINTFORM 全体　　
			CASE 4
				PRINTFORM 敵味方　
			CASEELSE
				PRINT なし　　
		ENDSELECT
		TRYCALLFORM SKILL_EFECT_{LOCAL+2000}
		PRINT 種別:
		SELECTCASE RESULT
			CASE 1
				PRINTFORM Attack　　　
			CASE 2
				PRINTFORM 回復　　　
			CASE 3
				PRINTFORM 状態変化　
			CASE 4
				PRINTFORM 特殊　　　
			CASE 5
				PRINTFORM 状態回復　
			CASEELSE
				PRINTFORM その他　　
		ENDSELECT
		TRYCALLFORM 最大所持数_{LOCAL+2000}
		PRINTFORM 最大所持数 {RESULT}　
		TRYCALLFORM SKILL_SPEED_{LOCAL+2000}
		PRINTFORML 速度補正 {RESULT}　
		TRYCALLFORM SKILL_EXPLAIN_{LOCAL+2000}
	ELSEIF LOCAL < 3000
		TRYCALLFORM 攻撃相性_{LOCAL} 
		PRINTFORM 相性 [%GET_TYPE_E(RESULT),4%]　
		IF LOCAL < 2500
			TRYCALLFORM 戦闘能力修正_{LOCAL}, 0
			PRINTFORM Attack {RESULT,3}　
			TRYCALLFORM 戦闘能力修正_{LOCAL}, 1
			PRINTFORM Hit {RESULT,3}　
			TRYCALLFORM 戦闘能力修正_{LOCAL}, 4
			PRINTFORM 魔威 {RESULT,3}　
			TRYCALLFORM 戦闘能力修正_{LOCAL}, 5
			PRINTFORML 魔効 {RESULT,3}　
		ELSEIF LOCAL < 3000
			TRYCALLFORM 銃攻撃_{LOCAL}
			PRINTFORM 銃攻撃 {RESULT,3}　
			TRYCALLFORM 銃命中_{LOCAL}
			PRINTFORML 銃命中 {RESULT,3}　
		ENDIF
		TRYCALLFORM 最低攻撃回数_{LOCAL}
		PRINTFORM 攻撃回数 {RESULT}
		TRYCALLFORM 最大攻撃回数_{LOCAL}
		PRINTFORM -{RESULT}　
		TRYCALLFORM 射程_{LOCAL}
		PRINT 射程:
		SELECTCASE RESULT
			CASE 1
				PRINTFORM Ｓ　
			CASE 2
				PRINTFORM Ｍ　
			CASE 3
				PRINTFORM Ｌ　
			CASE 4
				PRINTFORM ＬＬ　
		ENDSELECT
		TRYCALLFORM 攻撃範囲_{LOCAL},
		PRINT 範囲:
		SELECTCASE RESULT
			CASE 1
				PRINTFORM 単体　
			CASE 2
				PRINTFORM 列　
			CASE 3
				PRINTFORM 全体　
			CASE 4
				PRINTFORM 敵味方　
		ENDSELECT
		SELECTCASE LOCAL
			CASE 2500 TO 3000
			TRYCALLFORM 特殊弾倉_{LOCAL}
			PRINTFORM Special Magazine {RESULT}　
		ENDSELECT
		TRYCALLFORM 速度補正_{LOCAL}
		PRINTFORM 速度補正 {RESULT}　
		SELECTCASE LOCAL
			CASE 2500 TO 3000
			TRYCALLFORM 銃タイプ_{LOCAL}
			SELECTCASE RESULT
				CASE 1
					PRINT ハンドガン　
				CASE 2
					PRINT ショットガン　
				CASE 3
					PRINT Aライフル・マシンガン　
				CASE 4
					PRINT 狙撃ライフル　
				CASE 5
					PRINT その他　
			ENDSELECT
			ENDSELECT
	ELSEIF LOCAL < 5500
		TRYCALLFORM 戦闘能力修正_{LOCAL}, 2
		PRINTFORM Defense {RESULT,3}　
		TRYCALLFORM 戦闘能力修正_{LOCAL}, 3
		PRINTFORM Evasion {RESULT,3}　
		TRYCALLFORM 戦闘能力修正_{LOCAL}, 5
		PRINTFORM 魔効 {RESULT,3}　
		LOCAL:2 = 0
		FOR LOCAL:1 , 0 , FLAG:相性数
			TRYCALLFORM 防御相性_{LOCAL}, LOCAL:1
			IF RESULT != 100
				LOCAL:2 += 1
				IF LOCAL:2 % 7 == 1
					PRINTL 
					PRINT 　　　　
				ENDIF
				IF RESULT < 100 || RESULT == 999
					SETCOLOR 51, 255, 255
				ELSE
					SETCOLOR 204, 0, 0
				ENDIF
				IF RESULT == 999
					PRINTFORM [%GET_TYPE_E(LOCAL:1),4%:反射]　
				ELSEIF RESULT == 50
					PRINTFORM [%GET_TYPE_E(LOCAL:1),4%:半減]　
				ELSEIF RESULT == 0
					PRINTFORM [%GET_TYPE_E(LOCAL:1),4%:無効]　
				ELSE
					PRINTFORM [%GET_TYPE_E(LOCAL:1),4%:{RESULT,4}]　
				ENDIF
			ENDIF
			RESETCOLOR
		NEXT
	ELSEIF LOCAL < 9000
		TRYCALLFORM 増加CP_{LOCAL}
		PRINTFORM 増加CP {RESULT}　
		TRYCALLFORM 必要レベル_{LOCAL}
		PRINTFORM 必要レベル {RESULT}　
	ENDIF
		PRINTL 
		TRYCALLFORM 装備条件説明_{LOCAL}
		TRYCALLFORM 装備解説_{LOCAL}
		PRINTL 

NEXT
WAIT
