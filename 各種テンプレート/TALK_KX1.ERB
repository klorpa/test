					RETURN 0
			ENDIF
		ELSEIF RESULT == 4
			;４．
			LOCAL = RAND:100 + RAND:(MAXBASE:PLAYER:知恵+MAXBASE:PLAYER:運/2) - RAND:20
			IF LOCAL < 30
				CFLAG:ARG:友好度 -= RAND:50
				;失敗
					PRINTFORMW 
					RETURN 3
			ELSE
				CFLAG:ARG:友好度 += RAND:30
				;成功
					PRINTFORMW 
					RETURN 0
			ENDIF
		ELSE
			GOTO INPUT_LOOP0
		ENDIF
ENDSELECT

